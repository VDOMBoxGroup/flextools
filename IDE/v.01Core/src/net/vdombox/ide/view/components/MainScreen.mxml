<?xml version="1.0" encoding="utf-8"?>
<s:Group
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/halo" 
	xmlns:components="net.vdombox.ide.view.components.*"
	
	height="100%"
	minHeight="600" minWidth="800" width="100%">
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	<mx:Canvas 
		width="100%"
		
		backgroundSize="100%">
		<mx:TabBar 
			id="mainTabBar"
			
			height="18" styleName="mainTabBar"
			
			horizontalAlign="left" left="130"/>
	</mx:Canvas>
	<mx:ViewStack
		id="componentsStack"
		
		height="100%" width="100%"
		
		top="18">
		
		<mx:Box id="applicationsManagment" >
		<components:ApplicationsManagment 
			width="100%" height="100%"/>
		</mx:Box>
		<mx:Box id="modulesManagment">
		<components:ModulesManagment
			 width="100%" height="100%"/>
		</mx:Box>
	</mx:ViewStack>
</s:Group>
