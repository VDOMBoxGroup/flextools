<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:containers="net.vdombox.ide.view.containers.*"
	xmlns:controls="net.vdombox.ide.view.controls.*" xmlns:components="net.vdombox.ide.view.components.*">
	<containers:ControlPanel 
		height="104" verticalScrollPolicy="off" width="100%"
		
		borderColor="#000000" borderStyle="solid" dropShadowEnabled="true" horizontalAlign="left"
		horizontalGap="5" paddingBottom="7" paddingLeft="7" paddingRight="7" paddingTop="7"
		verticalAlign="middle">
		<controls:ActionButton 
			label="{resourceManager.getString('Application','main_new')}" styleName="newButton"/>
		 
		<components:SearchPanel 
			id="searchPanel"
			
			height="86" width="250"
			panelName="{resourceManager.getString('Application','main_search')}"/>
		<components:ApplicationPanel
			id="listApplicationContainer"
			
			focusEnabled="false" height="86" width="280"
			panelName="{resourceManager.getString('Application','main_applist')}"/>
		<components:ApplicationInformation 
			id="applicationInformation"
			
			height="86"
			panelName="{resourceManager.getString('Application','main_appinfo')}"/>
	</containers:ControlPanel>
	<mx:ViewStack 
		id="mainViewStack"
		
		height="100%" styleName="vdomBackground" width="100%"
		
		borderColor="#000000" borderStyle="solid" dropShadowEnabled="true">
