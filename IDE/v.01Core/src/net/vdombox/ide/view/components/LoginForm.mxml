<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	
	height="300" horizontalScrollPolicy="off" verticalScrollPolicy="off" width="540"
	color="#FFFFFF"
	backgroundAlpha="0.0">
	<mx:Metadata>
		[ResourceBundle("LoginForm")]
	</mx:Metadata>
	<mx:Style>
		
		.loginPanel{
			headerHeight: 50;
			titleStyleName: "loginPanelTitle";
			controlBarStyleName: "loginControlBar";
			backgroundImage: Embed(source="theme.swf", symbol="LoginBackground");
			backgroundSize: "100%";
		}
		.loginPanelTitle {
			color: #000000;
			textAlign: "center";
			fontWeight: "bold";
		}
		.gradientBackground1 {
			fillColors: #EEEEEE, #999999;
			fillAlphas: 0.5, 0.5;
		}
	</mx:Style>
	<mx:Canvas 
		id="loginFormPanel"
		
		height="280" styleName="loginPanel" 
		width="540" x="0"
		horizontalScrollPolicy="off" verticalScrollPolicy="off"
		backgroundColor="#3F3F3F" borderColor="#454545" borderStyle="solid" bottom="0"
		cornerRadius="8" 	>
		<mx:Label text="{resourceManager.getString('LoginForm','title')}" fontSize="15" fontWeight="bold" x="87" y="10" width="441"/>
		<mx:Form 
			paddingBottom="0" paddingRight="0" paddingTop="0" x="70" y="60" verticalGap="15">
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','username')}" fontSize="12" fontWeight="bold">
				<mx:TextInput 
					id="username"
					
					width="240"/>
			</mx:FormItem>
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','password')}" fontSize="12" fontWeight="bold">
				<mx:TextInput 
					id="password"
					
					width="240"
					displayAsPassword="true"/>
			</mx:FormItem>
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','hostname')}" fontSize="12" fontWeight="bold">
				<mx:TextInput 
					id="hostname"
					
					width="240"/>
			</mx:FormItem>
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','language')}" fontSize="12" fontWeight="bold">
				<mx:ComboBox 
					id="selectLang"
					
					labelField="@label" width="240"
					
					fillAlphas="[1.0, 0.59]" fillColors="[#FFFFFF, #FFFFFF]" cornerRadius="0" color="#444444"/>
			</mx:FormItem>
		</mx:Form>
		<mx:HBox styleName="loginControlBar"
			width="100%" bottom="0">
			<mx:Button 
				id="submitButton"
				
				focusEnabled="false" height="35" label="{resourceManager.getString('LoginForm','ok_button')}"
				styleName="loginButtonOK" width="110"
				
				cornerRadius="0"
				buttonMode="true" fontSize="14."/>
			<mx:Spacer 
				width="100%"/>
			<mx:Button 
				id="quitButton"
				
				focusEnabled="false" height="35" label="{resourceManager.getString('LoginForm','quit_button')}"
				styleName="loginButtonQuit" width="110"
				
				cornerRadius="0"
				buttonMode="true" fontSize="14"/>
		</mx:HBox>
	</mx:Canvas>
	<mx:Image 
		height="70" source="@Embed(source='assets/login/logo.png')" width="70" x="10"/>
</mx:Canvas>
