<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	
	height="300" horizontalScrollPolicy="off" verticalScrollPolicy="off" width="540"
	
	backgroundAlpha="0.0">
	<mx:Metadata>
		[ResourceBundle("LoginForm")]
	</mx:Metadata>
	<mx:Style>
		
		.loginPanel{
			headerHeight: 50;
			titleStyleName: "loginPanelTitle";	
		}
		.loginPanelTitle {
			color: #000000;
			textAlign: "center";
			fontWeight: "bold";
		}
		.gradientBackground1 {
			fillColors: #EEEEEE, #999999;
			fillAlphas: 0.5, 0.5;
		}
	</mx:Style>
	<mx:Panel 
		id="loginFormPanel"
		
		height="280" styleName="loginPanel" title="{resourceManager.getString('LoginForm','title')}"
		width="540" x="0"
		
		backgroundColor="#3F3F3F" borderColor="#454545" borderStyle="solid" bottom="0"
		cornerRadius="8" dropShadowEnabled="false">
		<mx:Form 
			paddingBottom="0" paddingRight="0" paddingTop="0">
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','username')}">
				<mx:TextInput 
					id="username"
					
					width="140"/>
			</mx:FormItem>
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','password')}">
				<mx:TextInput 
					id="password"
					
					width="140"
					displayAsPassword="true"/>
			</mx:FormItem>
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','hostname')}">
				<mx:TextInput 
					id="hostname"
					
					width="140"/>
			</mx:FormItem>
			<mx:FormItem 
				label="{resourceManager.getString('LoginForm','language')}">
				<mx:ComboBox 
					id="selectLang"
					
					labelField="@label" width="140"
					
					fillAlphas="[1.0, 0.59]" fillColors="[#FFFFFF, #FFFFFF]"/>
			</mx:FormItem>
		</mx:Form>
		<mx:ControlBar 
			width="100%"
			
			paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0">
			<mx:Button 
				id="submitButton"
				
				focusEnabled="false" height="35" label="{resourceManager.getString('LoginForm','ok_button')}"
				styleName="loginButtonOK" width="110"
				
				cornerRadius="0"
				buttonMode="true"/>
			<mx:Spacer 
				width="100%"/>
			<mx:Button 
				id="quitButton"
				
				focusEnabled="false" height="35" label="{resourceManager.getString('LoginForm','quit_button')}"
				styleName="loginButtonQuit" width="110"
				
				cornerRadius="0"
				buttonMode="true"/>
		</mx:ControlBar>
	</mx:Panel>
	<mx:Image 
		height="70" source="@Embed(source='assets/login/logo.png')" width="70" x="10"/>
</mx:Canvas>
