<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo">
	<mx:Label
		text="{resourceManager.getString('LoginForm','title')}"
		width="440" x="90" top="0"/>
	<mx:Form x="70" y="30">
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','username')}">
			<s:TextInput
				id="username"
					
				width="240"/>
		</mx:FormItem>
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','password')}">
			<s:TextInput
				id="password"
					
				width="240"/>
		</mx:FormItem>
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','hostname')}">
			<s:TextInput
				id="hostname"
					
				width="240"/>
		</mx:FormItem>
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','language')}">
			<mx:ComboBox
				id="selectLang"
				labelField="@label" width="240"/>
		</mx:FormItem>
	</mx:Form>
	<s:HGroup bottom="0" width="100%">
		<s:Button
			id="exitButton"
			height="35"
			/>
		<mx:Spacer width="100%"/>
		<s:Button
			id="submitButton"
			
			height="35"/>
	</s:HGroup>
</s:Group>