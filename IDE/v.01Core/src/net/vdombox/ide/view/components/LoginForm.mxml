<?xml version="1.0" encoding="utf-8"?>
<s:Group name="Zzzzzzzz" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo" width="550" height="300">
	<fx:Script>
		<![CDATA[
			override public function parentChanged(p:DisplayObjectContainer) : void
			{
				var d : * = "";
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<s:Rect width="100%" height="275" y="25">
		<s:fill>
			<s:SolidColor color="#454545" />
		</s:fill>
	</s:Rect>
	<mx:Label
		text="{resourceManager.getString('LoginForm','title')}"
		width="440" x="90" y="40"/>
	<mx:Form x="70" y="80">
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','username')}">
			<s:TextInput
				id="username"
					
				width="240"/>
		</mx:FormItem>
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','password')}">
			<s:TextInput
				id="password"
					
				width="240"/>
		</mx:FormItem>
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','hostname')}">
			<s:TextInput
				id="hostname"
					
				width="240"/>
		</mx:FormItem>
		<mx:FormItem
			label="{resourceManager.getString('LoginForm','language')}">
			<mx:ComboBox
				id="selectLang"
				labelField="@label" width="240"/>
		</mx:FormItem>
	</mx:Form>
	<s:HGroup bottom="0" width="540">
		<s:Button
			id="exitButton"
			height="35"
			/>
		<mx:Spacer width="100%"/>
		<s:Button
			id="submitButton"
			
			height="35"/>
	</s:HGroup>
	<mx:Image x="10" width="70" height="70"  y="0"/>
</s:Group>