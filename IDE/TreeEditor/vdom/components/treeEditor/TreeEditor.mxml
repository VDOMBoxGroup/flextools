						 cnvLevelDown.removeChild( massLines[level][ind1][ind2]);
						 delete massLines[level][ind1][ind2];
					}
		// удаляем сам обьект
		removeChild(massTreeElements[strID]);
		delete massTreeElements[strID];
		
		curTree = null;
		
		saveToServer();
				
	}
	
