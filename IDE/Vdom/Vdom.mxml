<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication
	
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:vdom="vdom.*"
	xmlns:modules="vdom.modules.*"
	xmlns:controls="vdom.containers.*" 
	xmlns:editor="vdom.components.editor.*"
	xmlns:scriptEditor="vdom.components.scriptEditor.*"
	xmlns:loginForm="vdom.components.loginForm.*" 
	xmlns:main="vdom.components.main.*"
	xmlns:analyse="vdom.components.analyse.*" 
	xmlns:treeEditor="vdom.components.treeEditor.*"
	
	preinitialize="preinitalizeHandler();"
	
	layout="absolute"
	verticalScrollPolicy="off"
	>
	
	<mx:Script source="includes/Vdom.as"/>
	
	<mx:Metadata>
		[ResourceBundle("Application")]
	</mx:Metadata>
	
	<mx:XML id="languageList" source="locale/locales.xml" />
	
	<mx:ViewStack id="viewstack" width="100%" height="100%">
	
		<loginForm:LoginForm id="loginForm" submitBegin="submitLogin(event)"/>
	
		<mx:Canvas id="main"  width="100%" height="100%">
		
			<mx:ApplicationControlBar
				top="0" left="0" right="0" height="80" 
				fillColors="#000000" dock="true" cornerRadius="0">
				<mx:Spacer x="10" y="10" width="100%"/>
				<!--<mx:ComboBox id="selectTestLang"
					width="140"
					dataProvider="{languageList.Language}"
					labelField="@label"
					fillColors="[#ffffff, #ffffff]" fillAlphas="[1.0, 0.59]"
					change="changeLanguageHandler(event);"/> -->
				<mx:Spacer x="10" y="10" width="100%"/>
				<mx:Button label="Logout" click="viewstack.selectedChild=loginForm"/>
			</mx:ApplicationControlBar>
			
			<controls:MainTabNavigator id="tabPanel"
				top="90" left="10" right="10" bottom="10"
				paddingBottom="10" paddingTop="10" paddingRight="10" paddingLeft="10" tabPaddingLeft="80">
		
	 			<modules:ApplicationManagment label="{resourceManager.getString('Application','main_title')}" />
	 	
	 			<modules:Editor label="{resourceManager.getString('Application','editor_title')}" 
	 				width="100%" height="100%" />
		
				<mx:Canvas id="multilinTab"
					label="{resourceManager.getString('Application','multilingual_title')}"
					width="100%" height="100%" />
				
				<mx:Canvas id="portalManTab"
					label="{resourceManager.getString('Application','portal_managment_title')}"
					width="100%" height="100%" />
				
				<mx:Canvas id="publishTab"
					label="{resourceManager.getString('Application','publish_title')}"
					width="100%" height="100%" />
				
				<mx:Canvas id="safeguardTab"
					label="{resourceManager.getString('Application','safeguard_title')}"
					width="100%" height="100%" />
					
				<mx:Canvas id="vdomTab"
					label="{resourceManager.getString('Application','vdom_title')}"
					width="100%" height="100%" />
					
			</controls:MainTabNavigator>
		</mx:Canvas>
	</mx:ViewStack>
</mx:WindowedApplication>
