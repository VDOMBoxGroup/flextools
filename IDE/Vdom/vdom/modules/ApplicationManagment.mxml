<?xml version="1.0" encoding="utf-8"?>
<mx:ViewStack
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:controls="vdom.containers.*"
	xmlns:main="vdom.components.main.*"
	xmlns:createApplication="vdom.components.createApplication.*"
	xmlns:applicationProperties="vdom.components.applicationProperties.*"
	
	creationComplete="creationCompleteHandler();"
	show="showHandler();"
	hide="hideHandler();" 
	
	creationPolicy="all" xmlns:editApplication="vdom.components.editApplication.*">
	
<mx:Script source="includes/applicationManagment.as" />

<mx:Canvas id="initModule" width="100%" height="100%">
	<mx:Label text="Loading..." horizontalCenter="0" verticalCenter="0"/>
</mx:Canvas>

<mx:VBox id="components"
	width="100%" height="100%" verticalGap="7" >
			
	<controls:ControlPanel 
		width="100%" height="104"
		paddingTop="7" paddingBottom="7" paddingLeft="7" paddingRight="7"
		dropShadowEnabled="true"
		horizontalAlign="left" verticalAlign="middle"
		horizontalGap="5" borderStyle="solid" borderColor="#000000">
		
		<controls:ActionButton styleName="newButton"
			label="{resourceManager.getString('Application','main_new')}"
			labelPlacement="bottom"
			click="mainViewStack.selectedChild = createApplication"/>
		
		<!--<controls:ActionButton styleName="newsButton"
			label="{resourceManager.getString('Application','main_steps')}"
			labelPlacement="bottom"/>-->

		<controls:ActionPanel panelName="{resourceManager.getString('Application','main_search')}"
			width="250" height="86" dropShadowEnabled="false">
		
			<mx:HBox width="100%">
				<mx:Button label="Find" height="50" cornerRadius="0"/>
				<mx:VBox width="100%" horizontalAlign="right" verticalGap="4">
					<mx:TextInput height="18"/>
					<mx:ComboBox height="18" cornerRadius="0"></mx:ComboBox>
					<mx:Button label="Go" height="18" cornerRadius="0"/>
				</mx:VBox>
			</mx:HBox>
			
		</controls:ActionPanel>
		
		<controls:ApplicationPanel id="listApplicationContainer"
			dropShadowEnabled="false"
			panelName="{resourceManager.getString('Application','main_applist')}" 
			height="86" />
		
		<controls:ApplicationInformation
			panelName="{resourceManager.getString('Application','main_appinfo')}"
			height="86" 
			dropShadowEnabled="false"
			dataProvider="{dataManager.currentApplicationInformation}" />
		
	</controls:ControlPanel>
	
	<mx:ViewStack id="mainViewStack" width="100%" height="100%" styleName="vdomBackground"
			dropShadowEnabled="true" borderStyle="solid"  borderColor="#000000">
			
		<main:Main id="mainCanvas" styleName="mainCanvas" width="100%" height="100%" 
			borderStyle="none"/>
			
		<createApplication:CreateApplication id="createApplication"
			width="100%" height="100%" />
		
		<applicationProperties:applicationProperties id="applicationProperties" 
			width="100%" height="100%" />
			
		<editApplication:editApplication id="editApplication"
			width="100%" height="100%" />
	</mx:ViewStack>
	
</mx:VBox>
</mx:ViewStack>