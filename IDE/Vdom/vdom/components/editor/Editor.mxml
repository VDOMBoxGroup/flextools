<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:containers="vdom.components.editor.containers.*"
	
	width="100%" height="100%"
	
	horizontalScrollPolicy="off" verticalScrollPolicy="off"
	
	creationComplete="creationCompleteHandler();"
	show="show();"
	hide="hide();"
>
	<mx:Script source="includes/editor.as" />
	
	<mx:HBox verticalScrollPolicy="off" left="0" right="0" top="0" bottom="0">
	
		<containers:Types id="types" resizeToContent="true"
			height="100%" y="100" width="90" minWidth="170" minHeight="0"
			dataProvider="{typesXML}"
		/>
		
		<mx:VBox id="main" width="100%" bottom="0" height="100%">
			<containers:WorkArea id="workArea"
				width="100%" height="100%" visible="false"
				dataProvider="{editorDataManager.objectDescription}"
			/>
		<!-- <containers:Toolbar width="100%" type="{editorDataManager.objectDescription}" id="toolbar"/> -->
		</mx:VBox>
		
		<mx:VBox 
			verticalGap="5" paddingTop="5" paddingLeft="0" paddingRight="25" 
			minHeight="0" height="100%" width="220"
			verticalScrollPolicy="auto" horizontalScrollPolicy="off"
		>
			<containers:AttributesPanel id="attributesPanel" title="Attributes"  
				dataProvider="{editorDataManager.objectDescription}" width="200"
			/>
			<containers:ClosablePanel id="helpPanel" title="Help" 
				width="200"
			>
				<mx:Text htmlText="{attributesPanel.help}" condenseWhite="true" width="100%" minHeight="0"/>
			</containers:ClosablePanel>
			<containers:ClosablePanel id="pagePanel" title="Pages" width="200">
				<mx:List id="pageList"
					labelField="@Name"
					width="100%" minHeight="0"
					change="topLevelObjectChange()"/>
			</containers:ClosablePanel>
		</mx:VBox>
	</mx:HBox>
</mx:Canvas>
