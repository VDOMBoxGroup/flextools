	private function showHnadler():void
	{
		if(!main) 
			main = new Canvas();
	/*
		if(!btLine)
			btLine = new DeleteLineButton();
		*/
		addTreeEditorListeners();
			
		dataManager.getApplicationStructure();
		
	//	setDisplayNames();
