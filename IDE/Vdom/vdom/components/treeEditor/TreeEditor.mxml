	private function hideHendler():void
	{
		saveToServer();
		removeAllLines();
		removeMassTreeElements();
		removeTreeEditorListeners();
		if(curTree)
			dataManager.changeCurrentPage(curTree.ID);
	//	btLine.visible = false;
