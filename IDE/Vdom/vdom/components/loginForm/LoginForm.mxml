<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	
	width="100%" height="100%"
	
	creationComplete="init();"
	show="show();"
	hide="hide();">
	
	<mx:Metadata>
		[Exclude(name="alignButtons", kind="property")]
		[Event(name="authDataChanged", type="vdom.events.AuthenticationEvent")]
		[Event(name="submitBegin", type="flash.events.Event")]
	</mx:Metadata>
	
	<mx:Script source="includes/loginForm.as"/>
	
	<mx:Form 
		horizontalCenter="0" verticalCenter="0" 
		borderColor="#808080" borderStyle="solid" backgroundColor="#ffffff" dropShadowEnabled="true">
		<mx:FormItem label="{languages.language.(@label == 'login_username')}">
			<mx:TextInput id="_username" 
				width="140"/>
		</mx:FormItem>
		<mx:FormItem label="{languages.language.(@label == 'login_password')}">
			<mx:TextInput id="_password"
				width="140" 
				displayAsPassword="true" text="777"/>
		</mx:FormItem>
		<mx:FormItem label="{languages.language.(@label == 'login_ip')}">
			<mx:TextInput id="_ip"
				width="140" 
				text="127.0.0.1:81"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:ComboBox id="selectLang"
				width="140"
				dataProvider="{languageList.Language}"
				labelField="@label"
		 		fillColors="[#ffffff, #ffffff]" fillAlphas="[1.0, 0.59]"
		 		change="changeLanguageHandler(event);"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:Button id="submitButton" 
				label="{languages.language.(@label == 'login_sendbutton')}"
				click="checkData();"/>
		</mx:FormItem>
	</mx:Form>
</mx:Canvas>
