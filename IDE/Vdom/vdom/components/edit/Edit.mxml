<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:containers="vdom.components.edit.containers.*"
	xmlns:mainContainers="vdom.containers.*"
	
	width="100%" height="100%"
	
	horizontalScrollPolicy="off" verticalScrollPolicy="off"
	
	initialize="initializeHandler();"
	creationComplete="creationCompleteHandler();"
	show="showHandler();"
	hide="hideHandler();"
xmlns:objectsPanel="vdom.components.objectsPanel.*">
	<mx:Script source="includes/edit.as" />
	
	<mx:HBox verticalScrollPolicy="off" left="0" right="0" top="0" bottom="0">
	
		<containers:TypeAccordion id="types" resizeToContent="true"
			height="100%" y="100" width="90" minWidth="170" minHeight="0"
			dataProvider="{dataManager.listTypes}" dropShadowEnabled="true"
		/>
		
		<mx:VBox id="main" width="100%" bottom="0" height="100%">
		
			<mainContainers:AdvancedTabNavigator id="mainArea" width="100%" height="100%" borderStyle="none">			
				
				<containers:WorkArea id="workArea" label="WYSIWYG" focusEnabled="false"
					horizontalScrollPolicy="off" verticalScrollPolicy="off" clipContent="true"
					visible="false" />
					
				<containers:XMLPresentationEditor id="xmlEditor" label="VDOM XML"
					dropShadowEnabled="true" borderStyle="solid"/>
				
			</mainContainers:AdvancedTabNavigator>
		<!-- <containers:Toolbar width="100%" type="{editorDataManager.objectDescription}" id="toolbar"/> -->
		</mx:VBox>
		
		<mx:VBox 
			verticalGap="5" 
			minHeight="0" height="100%" width="200"
			verticalScrollPolicy="auto" horizontalScrollPolicy="off" >
			
			<containers:AttributesPanel id="attributesPanel"
				title="OBJECT PROPERTIES" headerHeight="30"
				acceptLabel="{resourceManager.getString('Application','editor_save')}" 
				deleteLabel="{resourceManager.getString('Application','editor_delete')}"
				dataProvider="{dataManager.currentObject}" width="200" />

			<containers:ClosablePanel id="helpPanel" title="Help" 
				width="200" >
				
				<mx:Text htmlText="{attributesPanel.help}" condenseWhite="true" width="100%" minHeight="0"/>
				
			</containers:ClosablePanel>
			
			<!--
			<containers:ClosablePanel id="pagePanel" title="Pages" width="200">
			
				<mx:List id="pageListAAA"
					labelField="@Name"
					width="100%" minHeight="0"
					change="topLevelObjectChange()"/>
					
			</containers:ClosablePanel>
			-->
			<objectsPanel:ObjectsPanel id="pageList" title="Pages" y="50" width="200" height="100%" 
				dataProvider="{dataManager.listPages}" currentObject = "{dataManager.currentObject}"/> 					
			
		</mx:VBox>
	</mx:HBox>
</mx:Canvas>
