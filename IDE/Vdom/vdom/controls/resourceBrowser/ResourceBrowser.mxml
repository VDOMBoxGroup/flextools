<mx:TitleWindow 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="absolute" width="800" height="600"
	title="Resource Manager"
	creationComplete="{creationComplete();}"
	showCloseButton="true" 
	xmlns:resourceBrowser="vdom.controls.resourceBrowser.*"
>
	<mx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
		]]>
	</mx:Script>
	
	<!-- Main Class Scripting File -->			
	<mx:Script source="ResourceBrowser_s.as" />
	
	<mx:VBox 
		width="100%" height="100%"
		paddingLeft="5" paddingBottom="5" paddingRight="5" paddingTop="5"
		horizontalGap="3" verticalGap="3"
	>
		<!-- Top Panel -->
		<mx:HBox
			width="100%" height="30" cornerRadius="0"
			verticalAlign="middle" paddingLeft="5" paddingRight="5"
			backgroundColor="#e5e5e5" borderStyle="solid"
		>
			
			<mx:ButtonBar height="24" itemClick="{changeView(event);}" >          			
				<mx:Array>
					<mx:String id="tView">Thumbnails view</mx:String>
					<mx:String id="lView">List view</mx:String>
				</mx:Array>					
			</mx:ButtonBar>
			
			<mx:Button id="__expandBtn" height="24" label="Expand" toggle="true" click="{expandHandler();}" />			
			
			<mx:VRule height="100%" />
			
			<mx:Label text="Filter:" fontWeight="bold"/>
			<mx:ComboBox id="__filterCBx" width="100%" dataProvider="{_filterDataProvider}" change="{filterCBxHandler();}" />
			
			<mx:VRule height="100%" />
			
			<mx:Button height="24" label="Upload File..." />
			
			<mx:VRule height="100%" />
			
			<mx:Button height="24" label="Delete File..." />
		</mx:HBox>
		<!-- End of top panel -->
		
		<mx:HBox width="100%" height="100%" horizontalGap="2">
			<mx:Tile id="thumbsList"
				width="100%" height="100%" minWidth="141" 
				direction="horizontal" borderStyle="solid"
				verticalScrollPolicy="on" horizontalScrollPolicy="off"
				horizontalAlign="center"
				paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5"
			/>
				
			<mx:VBox width="100%" height="100%" minWidth="375" horizontalScrollPolicy="off" verticalScrollPolicy="off">
				<mx:VBox width="100%" height="100%" verticalGap="2" horizontalAlign="center">
					<mx:VBox id="__previewArea" 
						width="100%" height="100%"
						verticalAlign="middle" horizontalAlign="center"
						mouseOver="{__previewArea.toolTip = __previewArea.width.toString() + ' x ' + __previewArea.height.toString();}"
					/>
					
					<mx:Box cornerRadius="3" backgroundColor="#FFF6EA" borderStyle="solid"><mx:Label id="__rName" text="" fontWeight="bold" width="260" textAlign="center" /></mx:Box>
					<mx:HBox width="100%" verticalAlign="middle" horizontalAlign="center">
						<mx:Box cornerRadius="3" backgroundColor="#FFF6EA" borderStyle="solid" paddingLeft="5" paddingRight="5">
							<mx:Label id="__rType" text="" fontWeight="bold" />
						</mx:Box>
						<mx:VRule height="18" />
						<mx:Box cornerRadius="3" backgroundColor="#FFF6EA" borderStyle="solid" paddingLeft="5" paddingRight="5">
							<mx:Label id="__iResolution" text="" fontWeight="bold" />
						</mx:Box>					
					</mx:HBox>
				</mx:VBox>				
			</mx:VBox>	
		</mx:HBox>
	
		<mx:HBox width="100%" horizontalAlign="right" verticalAlign="middle" height="24">
			<mx:Label text="Total Resources:" />
			<mx:Label text="{_totalResources}" fontWeight="bold" />
			<mx:VRule height="100%" />
			<mx:Label text="Filtered:" />
			<mx:Label text="{_filteredResources}" fontWeight="bold" />

			<mx:Spacer width="100%" />
			<mx:Button label="Done" click="{doneHandler();}" />
		</mx:HBox>
	</mx:VBox>
</mx:TitleWindow>
