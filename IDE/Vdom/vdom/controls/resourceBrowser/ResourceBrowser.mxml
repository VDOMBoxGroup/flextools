<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="absolute" width="800" height="600"
	title="Resource Manager"
	creationComplete="{creationComplete();}"
	showCloseButton="true">
			
	<mx:Script source="ResourceBrowser_s.as" />
	
	<mx:VBox 
		width="100%" height="100%"
		paddingLeft="5" paddingBottom="5" paddingRight="5" paddingTop="5"
		>
	<mx:Label text="Content filter:" fontWeight="bold" />
	<mx:Tile width="100%" verticalAlign="middle" id="filtersArea">
		<!-- <mx:CheckBox id="jpegChkBox" label="Jpeg" /> -->
	</mx:Tile>
	<mx:HBox width="100%" height="100%">
		<mx:Tile id="thumbsList"
			width="395" height="100%" 
			direction="horizontal" borderStyle="solid"
			verticalScrollPolicy="on" horizontalScrollPolicy="off"
			horizontalAlign="center"
			paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5"
			/>
			
		<mx:Canvas id="previewCanvas" width="100%" height="100%" borderStyle="solid" />		
	</mx:HBox>
	<mx:HBox width="100%" horizontalAlign="right">
		<mx:Button id="browseBtn" width="150" label="Browse / Add" />
		<mx:Spacer width="100%" />
		<mx:Button label="Done" click="{PopUpManager.removePopUp(this);}" />
	</mx:HBox>
	</mx:VBox>
</mx:TitleWindow>
