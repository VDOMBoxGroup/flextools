<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:view="view.*"
					   focusEnabled="true" minHeight="600" minWidth="800"
					   backgroundColor="#ccc0c0"
					   creationComplete="windowedapplication1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;

			private var fs : FileStream;

			protected function windowedapplication1_creationCompleteHandler( event : FlexEvent ) : void
			{
				var file : File = File.applicationDirectory;

				file = file.resolvePath( "manager.py" );

				fs = new FileStream();
				fs.open( file, FileMode.READ );

				var ba : ByteArray = new ByteArray();

				fs.readBytes( ba );

				var text : String = ba.readUTFBytes( ba.length );

//				pythonScriptEditor.loadSource( text, "zzz" );

				file = File.applicationDirectory;
				file = file.resolvePath( "test.xml" );

				ba.position = 0;
				
				fs.open( file, FileMode.READ );
				fs.readBytes( ba );

				text = ba.readUTFBytes( ba.length );
				xmlScriptEditor.loadSource( text, "zzz" );
			}
		]]>
	</fx:Script>



	<s:Group height="100%" width="100%">
		<s:layout>
			<s:HorizontalLayout/>
		</s:layout>

		<!--<view:PythonScriptEditor id="pythonScriptEditor"
								 height="100%" width="100%" visible="false" includeInLayout="false"/>-->

		<view:XMLScriptEditor id="xmlScriptEditor"
							  height="100%" width="100%" />
	</s:Group>


</s:WindowedApplication>
