<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:view="view.*"
		addedToStage="skin1_addedToStageHandler(event)" mouseDown="skin1_mouseDownHandler(event)" resize="skinnablecontainer1_resizeHandler(event)">

	<fx:Script>
		<![CDATA[
			import mx.events.ResizeEvent;

			protected function skinnablecontainer1_resizeHandler( event : ResizeEvent ) : void
			{
				scriptAreaComponent.paint( width - vsb.width, height - hsb.height );
			}

			protected function skin1_mouseDownHandler( event : MouseEvent ) : void
			{
				stage.focus = scriptAreaComponent;
			}

			protected function skin1_addedToStageHandler( event : Event ) : void
			{
				scriptAreaComponent.addEventListener( Event.SCROLL, scriptAreaComponent_scrollHandler );

				updateScrollBar();
			}

			private function scriptAreaComponent_scrollHandler( event : Event ) : void
			{
				updateScrollBar();
			}

			private function updateScrollBar() : void
			{
				vsb.maximum = scriptAreaComponent.maxScrollV;
				vsb.value = scriptAreaComponent.scrollV;

				hsb.maximum = scriptAreaComponent.maxScrollH / 8;
				hsb.value = scriptAreaComponent.scrollH / 8;
			}

			protected function hsb_changeHandler( event : Event ) : void
			{
				scriptAreaComponent.scrollH = hsb.value * 8;
			}
		]]>
	</fx:Script>

	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>


	<view:ScriptAreaComponent id="scriptAreaComponent"
								text="asdka ;lda sld"/>

	<s:HScrollBar id="hsb"
				  minimum="0"
				  bottom="0" left="40" right="{ vsb.width }"
				  change="hsb_changeHandler(event)"/>

	<s:VScrollBar id="vsb"
				  minimum="1"
				  bottom="{ hsb.height }" right="0" top="0"/>
</s:Skin>
