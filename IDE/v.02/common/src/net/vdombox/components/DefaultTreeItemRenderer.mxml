<?xml version="1.0" encoding="utf-8"?>
<components:TreeItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
							 xmlns:s="library://ns.adobe.com/flex/spark"
							 xmlns:components="net.vdombox.components.*">

	<components:layout>
		<s:HorizontalLayout paddingBottom="4" paddingLeft="{indentation + 4}" paddingTop="4" verticalAlign="middle"/>
	</components:layout>

	<components:DefaultDisclosureButton currentState="{isOpen ? 'open' : 'closed'}"
								   click="{toggle();}"
								   visible="{disclosureIconVisible}"/>

	<s:BitmapImage includeInLayout="{Boolean(icon)}" source="{icon}"
				   visible="{Boolean(icon)}"/>

	<s:Label id="labelDisplay"
			 text="{label}"
			 color="{textColor}"/>

</components:TreeItemRenderer>
