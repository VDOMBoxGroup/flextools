<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				height="20">
	<fx:Script>
		<![CDATA[
			import net.vdombox.editors.parsers.AutoCompleteItemVO;
			
			private var _data : AutoCompleteItemVO;
			
			override public function set data( value : Object ) : void
			{
				super.data = value;
				
				_data = value as AutoCompleteItemVO;
				
				labelField.text = value.value;
				
				if ( _data.icon )
					icon.source = _data.icon;
				else
					icon.source = null;
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#555555" color.selected="#2a2a2a"/>
		</s:fill>
	</s:Rect>
	
	<s:HGroup width="100%" height="100%" verticalAlign="middle">
		<s:BitmapImage id="icon" />
		
		<s:Label id="labelField" color="#ebebeb"/>
	</s:HGroup>
	
	<s:Rect right="0" height="100%" width="40">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#555555" alpha="0"/>
				<s:GradientEntry color="#555555" alpha="0.5"/>
				<s:GradientEntry color="#555555" alpha="0.9"/>
				<s:GradientEntry color="#555555" alpha="1"/>
				<s:GradientEntry color="#555555" alpha="1" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	
</s:ItemRenderer>
