<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:resourceBrowserWindow="net.vdombox.ide.common.view.components.windows.resourceBrowserWindow.*" 
		minWidth="600" minHeight="330" width="600" height="330">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.ide.common.view.components.windows.SpinnerPopup")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="inactiveWithControlBar" />
		<s:State name="inactive" />
		<s:State name="disabledWithControlBar" />
		<s:State name="normalWithControlBar" />
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242" alpha="0.3"/>
		</s:fill>
	</s:Rect>
	
	<s:VGroup width="100%" height="100%" 
			  verticalAlign="middle" horizontalAlign="center">
		
		<resourceBrowserWindow:SpinningSmoothImage id="spinner"
										width="20" height="20" 
				  						source="@Embed('assets/spinner.png')"
										maintainAspectRatio="true"
										scaleContent="true" 
										smoothBitmapContent="true"
										cachePolicy="on"
										cacheAsBitmap="true"/>
		
		<s:Label id="spinnerLabel" text="" textAlign="center" color="white" 
				 fontWeight="normal" fontFamily="Arial" fontSize="12" />
		
		<s:Label id="resourceName" color="white" 
				 fontWeight="normal" fontFamily="Arial" fontSize="12"/>
		
		<s:Label id="resourceStatus" color="white" 
				 fontWeight="normal" fontFamily="Arial" fontSize="12"/>
		
		<s:Label id="totalCountResource" color="white" 
					 fontWeight="normal" fontFamily="Arial" fontSize="12"/>
		
	</s:VGroup>
	
</s:SparkSkin>
