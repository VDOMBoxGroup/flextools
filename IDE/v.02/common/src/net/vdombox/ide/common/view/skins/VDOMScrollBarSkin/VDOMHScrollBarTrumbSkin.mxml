<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009">

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
    ]]>
    </fx:Metadata> 
    
    <fx:Script fb:purpose="styling">
        /**
         * @private
         */
        override protected function initializationComplete():void
        {
            useChromeColor = true;
            super.initializationComplete();
        }
    </fx:Script>
    
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

	<!-- background -->
	<s:HGroup width="100%" gap="0" horizontalAlign="center">
		<s:Rect left="1" minWidth="9" maxWidth="9" minHeight="10">
			<s:fill>
				<s:BitmapFill source = "@Embed('assets/vdomscrollbar/mini-horizontal-scroll-right.png')" smooth="true"/>
			</s:fill>
		</s:Rect>
		<s:Rect width="100%" minHeight="10">
			<s:fill>
				<s:BitmapFill source = "@Embed('assets/vdomscrollbar/mini-horizontal-scroll-center.png')" smooth="true" fillMode="repeat"/>
			</s:fill>
		</s:Rect>
		<s:Rect right="2" minWidth="9" maxWidth="9" minHeight="10">
			<s:fill>
				<s:BitmapFill source = "@Embed('assets/vdomscrollbar/mini-horizontal-scroll-left.png')" smooth="true"/>
			</s:fill>
		</s:Rect>
	</s:HGroup>

   

    <!-- drop shadow -->
    <s:Rect left="0" top="1" bottom="1" width="1">
        <s:fill>
            <s:SolidColor color="0x000000" alpha="0.12" />
        </s:fill>
    </s:Rect>
    <s:Rect right="0" top="1" bottom="1" width="2">
        <s:fill>
            <s:SolidColor color="0x000000" alpha="0.12" />
        </s:fill>
    </s:Rect>
    <s:Rect right="1" top="1" bottom="1" width="1">
        <s:fill>
            <s:SolidColor color="0x000000" alpha="0.12" />
        </s:fill>
    </s:Rect>
</s:SparkSkin>
