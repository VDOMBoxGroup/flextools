<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		creationComplete="sparkskin1_creationCompleteHandler(event)" xmlns:components="net.vdombox.components.*" xmlns:button="net.vdombox.ide.common.view.components.button.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.ide.common.view.components.windows.CreatePageWindow")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.ide.common.events.WindowEvent;
			import net.vdombox.ide.common.view.skins.VDOMScrollBarSkin.VDOMVScrollBarSkin;
			
			protected function sparkskin1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				hostComponent.title = resourceManager.getString( 'Tree_General', 'create_page_title' );
			}
			
			protected function pageTypeList_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				pageTypeList.scroller.verticalScrollBar.setStyle( "skinClass", VDOMVScrollBarSkin );
				addEventListener(MouseEvent.MOUSE_WHEEL, mouseWheelHandler, true, 0, true );
			}
			
			private function mouseWheelHandler( event : MouseEvent ) : void
			{
				event.delta = event.delta > 0 ? 1 : -1;
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabledAndInactive" />
		<s:State name="normalAndInactive" />
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:Group width="100%" height="100%">
		
		<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
			<s:fill>
				<s:SolidColor color="#424242"/>
			</s:fill>
		</s:Rect>
		
		<s:VGroup width="100%" height="100%" top="9" left="9" right="9" bottom="9" gap="0">
			
			<s:Group width="100%" height="42">
				<s:TitleBar id="titleBar"
							minHeight="32" width="100%"
							skinClass="net.vdombox.ide.common.view.skins.PopupWindowTitleBarSkin"/>
			</s:Group>	
			
			<s:List id="pageTypeList"
					dataProvider="{ hostComponent._pagesDataProvider}" height="100%" width="100%"
					itemRenderer="net.vdombox.ide.common.view.components.PageTypeItemRenderer"
					requireSelection="true" useVirtualLayout="false"
					creationComplete="pageTypeList_creationCompleteHandler(event)" borderVisible="false"/>
			
			<s:Group width="100%" height="54">
				
				<s:Rect width="100%" height="100%">
					<s:fill>
						<s:BitmapFill source = "@Embed('assets/texture_ide_sidebar.png')" smooth="true" fillMode="repeat"/>
					</s:fill>
				</s:Rect>
				
				<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="right" paddingRight="10">
					
					<button:VDOMButton label="Cancel"
										   click="dispatchEvent( new WindowEvent( WindowEvent.PERFORM_CANCEL ) )" />
					
					<button:VDOMButton label="Create"
							  click="dispatchEvent( new WindowEvent( WindowEvent.PERFORM_APPLY ) )" />
					
				</s:HGroup>
				
			</s:Group>
			
			
		</s:VGroup>
		
	</s:Group>
	
	
	
</s:SparkSkin>
