<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 minHeight="10" minWidth="10"
			 alpha.disabled="0.5">

	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("net.vdombox.ide.common.view.components.button.WorkAreaButton")]
		]]>
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			/* Define the skin elements that should not be colorized.
			 For button, the graphics are colorized but the label is not. */
			static private const exclusions : Array = [ "labelDisplay" ];

			/**
			 * @copy spark.skins.SparkSkin#colorizeExclusions
			 */
			override public function get colorizeExclusions() : Array
			{
				return exclusions;
			}

			/**
			 *  @private
			 */
			override protected function updateDisplayList( unscaledWidth : Number, unscaledHeight : Number ) : void
			{
				var cr : Number = getStyle( "cornerRadius" );

				if ( cornerRadius != cr )
					cornerRadius = cr;

				super.updateDisplayList( unscaledWidth, unscaledHeight );
			}

			[Bindable]
			public var cornerRadius : Number = 2;
		]]>
	</fx:Script>
	<!-- states -->

	<s:states>

		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>

		<s:State name="upAndHighlighted"/>
		<s:State name="overAndHighlighted"/>
		<s:State name="downAndHighlighted"/>
		<s:State name="disabledAndHighlighted"/>
	</s:states>

	<!-- layer 2: fill -->

	<s:Rect bottom="0" left="0" right="0" top="0">

		<s:fill>
			<s:LinearGradient rotation="90">

				<s:GradientEntry color.disabledAndHighlighted="0x900000" color.down="0x900000" color.downAndHighlighted="0x900000" color.over="0xBBBDBD" color.overAndHighlighted="0x900000"
								 color.up="0xEAEAE8" color.upAndHighlighted="0x900000"
								 alpha="0" alpha.over=".5" alpha.down="1" alpha.upAndHighlighted="1" alpha.overAndHighlighted=".5" alpha.downAndHighlighted="1" alpha.disabledAndHighlighted="1"/>

				<s:GradientEntry color.disabledAndHighlighted="0xD20000" color.down="0xD20000" color.downAndHighlighted="0xD20000" color.over="0x9FA0A1" color.overAndHighlighted="0xD20000"
								 color.up="0xCCCCCC" color.upAndHighlighted="0xD20000"
								 alpha="0" alpha.over=".5" alpha.down="1" alpha.upAndHighlighted="1" alpha.overAndHighlighted=".5" alpha.downAndHighlighted="1" alpha.disabledAndHighlighted="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:HGroup gap="5" width="100%"
			  paddingLeft="5" paddingRight="5" verticalAlign="middle" verticalCenter="0">

		<mx:Image id="buttonIcon"
				  height="11" includeInLayout="{ hostComponent.icon ? true : false }" source="{ hostComponent.icon }" width="11"
				  visible="{ hostComponent.icon ? true : false }"/>

		<s:Label id="labelDisplay"
				 width="100%"
				 color.disabledAndHighlighted="white" color.downAndHighlighted="white" color.overAndHighlighted="white" color.upAndHighlighted="white" textAlign="left" verticalAlign="middle"
				 maxDisplayedLines="1"/>
	</s:HGroup>
</s:SparkSkin>
