<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 minWidth="120" height="13" 
		 creationComplete="group1_creationCompleteHandler(event)"
		 >
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				width = parent.width;
				
				parent.addEventListener( Event.RESIZE, parentResizeHandler, false, 0 , true );
			}
			
			private function parentResizeHandler( event : Event ) : void
			{
				if ( parent )
					width = parent.width;
				
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#4B4B4B"/>
				<s:GradientEntry color="#353535"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
		<mx:Image width="30" height="7"
				  source = "@Embed('assets/divider_1.png')" smoothBitmapContent="true"/>
	</s:HGroup>
	
	
	<s:Line top="0" width="100%">
		<s:stroke>
			<s:SolidColorStroke color="#FFFFFF" alpha="0.2" weight="1"/>
		</s:stroke>
	</s:Line>
	
	<s:Line bottom="0" width="100%">
		<s:stroke>
			<s:SolidColorStroke color="#000000" alpha="0.7" weight="1"/>
		</s:stroke>
	</s:Line>
	
</s:Group>
