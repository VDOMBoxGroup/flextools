<!--- The default skin class for the Spark HScrollBar component. The thumb and track skins are defined by the
HScrollBarThumbSkin and HScrollBarTrackSkin classes, respectively.  

       @see spark.components.HScrollBar
       @see spark.skins.spark.HScrollBarThumbSkin
       @see spark.skins.spark.HScrollBarTrackSkin
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="35" width="100%" height="8"
    alpha.normal="1" alpha.disabled="0.2" alpha.inactive="0.2">

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.HScrollBar")]
    ]]>
    </fx:Metadata> 
    
    <fx:Script fb:purpose="styling">
        
		import mx.events.StateChangeEvent;
		/* Define the skin elements that should not be colorized. 
           For scroll bar, the skin itself is colorized but the individual parts are not. */
        static private const exclusions:Array = ["track", "thumb" ];

        /**
         * @private
         */
        override public function get colorizeExclusions():Array {return exclusions;}
        
        /**
         * @private
         */
		
        override protected function initializationComplete() : void
        {
            useChromeColor = true;
            super.initializationComplete();
			thumb.skin.addEventListener( StateChangeEvent.CURRENT_STATE_CHANGE, setTrackAlpha );
        }
		
		private function setTrackAlpha( event : StateChangeEvent ) : void
		{
			if ( event.newState == "down" || event.newState == "over" )
				track.skin.alpha = 0.25;
			else
				track.skin.alpha = 0.15;
		}
		
	</fx:Script>
    
    <s:states>
        <s:State name="normal" /> 
        <s:State name="disabled" />
        <s:State name="inactive" />
    </s:states>

    <s:Button id="track" left="0" right="0" width="100%"  height="8"
			  focusEnabled="false"
              skinClass="net.vdombox.ide.common.view.skins.VDOMScrollBarSkin.VDOMWorkAreaHScrollBarTrackSkin" />

    <s:Button id="thumb" height="8"
              focusEnabled="false" visible.inactive="false" cornerRadius="5"
              skinClass="net.vdombox.ide.common.view.skins.VDOMScrollBarSkin.VDOMWorkAreaHScrollBarTrumbSkin"/>

</s:SparkSkin>