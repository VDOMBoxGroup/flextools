<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		maxWidth="338">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.view.Alert")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import net.vdombox.view.Alert;
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="inactiveWithControlBar" />
		<s:State name="inactive" />
		<s:State name="disabledWithControlBar" />
		<s:State name="normalWithControlBar" />
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:Group left="9" top="9" right="9" bottom="9">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:BitmapFill source = "@Embed('net/vdombox/icons/texture_sidebar.png')" smooth="true" fillMode="repeat"/>
			</s:fill>
		</s:Rect>
		
		<s:VGroup width="100%" height="100%" maxWidth="320" 
				  paddingTop="20" paddingBottom="10" paddingLeft="20" paddingRight="20" gap="30" horizontalAlign="center">
			<s:Label id="lbltext" maxWidth="320" textAlign="center"
					 fontSize="16" color="#FFFFFF" text="{hostComponent.text}"/>
			
			<s:HGroup height="29" width="100%" horizontalAlign="center" gap="40">
				<mx:Button  id="noButton" height="100%" cornerRadius="14" tabIndex="1"
							fontSize="18" label="{hostComponent.getNoLabel()}"
							visible="{hostComponent.getVisibleNoButton()}" includeInLayout="{hostComponent.getVisibleNoButton()}"
							click="hostComponent.btnClickHandler(Alert.NO)" keyDown="hostComponent.keyNoPush(event)"/>
				<mx:Button  id="yesButton" height="100%" cornerRadius="14" tabIndex="2"
							fontSize="18" icon="@Embed('net/vdombox/icons/Cancel.png')" label="{hostComponent.getYesLabel()}"
							click="hostComponent.btnClickHandler(Alert.YES)" keyDown="hostComponent.keyYesPush(event)"/>
			</s:HGroup>
		</s:VGroup>
		
	</s:Group>
	
	
	
	
	
</s:SparkSkin>
