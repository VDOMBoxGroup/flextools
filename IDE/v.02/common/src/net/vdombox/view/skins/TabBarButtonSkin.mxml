<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 minHeight="21" minWidth="100"
			 alpha.disabledStates="0.5" creationComplete="creationCompleteHandler()">

	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.components.tabNavigatorClasses.TabBarButton")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			override protected function updateDisplayList( unscaledWidth : Number, unscaleHeight : Number ) : void
			{
				closeButton.visible = hostComponent.canClose;

				if ( !closeButton.visible )
				{
					labelDisplay.right = 8;
				}
				else
				{
					labelDisplay.right = 18;
				}

				super.updateDisplayList( unscaledWidth, unscaledHeight );
			}

			
			protected function creationCompleteHandler():void
			{
				// TODO Auto-generated method stub
				//transform.matrix = new Matrix(1, .5, .5, 1, 150, 200);;
			}
			
		]]>
	</fx:Script>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over" stateGroups="overStates"/>
		<s:State name="down" stateGroups="downStates"/>
		<s:State name="disabled" stateGroups="disabledStates"/>
		<s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates"/>
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates"/>
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates"/>
		<s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates"/>
	</s:states>

	<!-- layer 1: fill -->

	<s:Rect id="backgroundRect" bottom="0" left="0" right="0" top="0">
			
		<s:stroke>
			<s:SolidColorStroke color="black"/>
		</s:stroke>
			
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#353535" color.downStates="#949494" color.overStates="#949494" color.selectedUpStates="#FCFDFD"/>
				<s:GradientEntry color="#353535" color.downStates="#949494" color.overStates="#949494" color.selectedUpStates="#FFFFFF"/>
			</s:LinearGradient>
		</s:fill>
			
	</s:Rect>
	<!-- layer 2: text -->
	<!--- Defines the appearance of the label(s) for the middle button(s) in the ButtonBar component. -->
	
	<s:Label id="labelDisplay"
			 bottom="2" color="#686868" color.down="white" color.over="white" color.selectedStates="#000000" fontFamily="Verdana" left="5" right="10" textAlign="left" top="2" verticalAlign="middle"
			 verticalCenter="1"
			 maxDisplayedLines="1"/>
	
	<s:Button id="closeButton"
			  right="2" skinClass="net.vdombox.view.skins.CloseButtonSkin" verticalCenter="1"/>
	

</s:SparkSkin>
