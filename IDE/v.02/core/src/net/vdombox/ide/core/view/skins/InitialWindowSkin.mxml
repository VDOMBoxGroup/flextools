<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 height="410" width="580">

	<fx:Metadata>
		[HostComponent("Object")]
	</fx:Metadata>

	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled" stateGroups="disabledGroup"/>
		<s:State name="normalAndInactive" stateGroups="inactiveGroup"/>
		<s:State name="disabledAndInactive" stateGroups="disabledGroup, inactiveGroup"/>
	</s:states>


	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:Group left="9" top="9" right="9" bottom="9">
		
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:BitmapFill source = "@Embed('icons/bg_logo.png')" smooth="true" fillMode="repeat"/>
			</s:fill>
		</s:Rect>
		
		<s:HGroup>
			<s:Button id="exitButton" cornerRadius="15"
					  height="29" label="{ resourceManager.getString( 'LoginForm', 'quit_button' ) }" minWidth="100"
					  fontFamily="Arial" fontSize="14" bottom="50" left="300" />
			
			<s:Button id="submitButton" cornerRadius="15"
					  height="29" label="{ resourceManager.getString( 'LoginForm', 'ok_button' ) }" minWidth="100"
					  fontFamily="Arial" fontSize="14"
					 />
		</s:HGroup>

		
	
		<s:Group id="contentGroup"
				 height="100%" width="100%"/>


	</s:Group>
	

	
</s:SparkSkin>
