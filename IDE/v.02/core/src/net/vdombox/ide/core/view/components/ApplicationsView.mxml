<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%"
		  height="100%"
		  paddingBottom="10"
		  paddingRight="10"
		  xmlns:components="net.vdombox.components.*" xmlns:button="net.vdombox.ide.common.view.components.button.*">

	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.ide.common.model._vo.ApplicationVO;
			import net.vdombox.ide.core.events.ApplicationManagerEvent;
			import net.vdombox.ide.common.view.skins.VDOMScrollBarSkin.VDOMVScrollBarSkin;
			
			import spark.components.Application;
			import spark.components.Scroller;
			import spark.components.VScrollBar;


			protected function applicationList_creationCompleteHandler( event : FlexEvent ) : void
			{
				applicationList.scroller.setStyle( "horizontalScrollPolicy", "off" );
				
				applicationList.scroller.verticalScrollBar.setStyle( "skinClass", VDOMVScrollBarSkin );
				
				addEventListener( MouseEvent.MOUSE_WHEEL, mouseWheelHandler, true, 0, true );

			}

			private function mouseWheelHandler( event : MouseEvent ) : void
			{
				event.delta = event.delta > 0 ? 1 : -1;
			}
			
			private function getLocalesWord( word : String ) : String
			{
				return resourceManager.getString( 'Core_General', word );
			}

			public function set selectedApplication( value : ApplicationVO ) : void
			{
				applicationList.selectedItem = value;

				applicationList.validateNow();
				
				applicationList.ensureIndexIsVisible(  applicationList.selectedIndex );
			}
			
			
			
			private function get verticalScrollBar() : VScrollBar 
			{
				return applicationList.scroller.verticalScrollBar; 
			}
			
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:VGroup width="50%" 
			  minWidth="25" 
			  height="100%" 
			  gap="2">
		<s:List id="applicationList"
				width="100%"
				height="100%"
				itemRenderer="net.vdombox.ide.core.view.components.ApplicationListItemRenderer"
				creationComplete="applicationList_creationCompleteHandler(event)"
				/>

		<button:VDOMButton id="addApplication" label="{getLocalesWord( 'change_application_add_new_application' )}" />

	</s:VGroup>

	<s:VGroup width="50%" height="100%" paddingTop="12" gap="10">
		<s:TextInput id="applicationName"
					 width="100%"
					 borderVisible="false"
					 editable="false"
					 selectable="false"
					 fontFamily="Arial"
					 fontSize="18"
					 color="#FFFFFF"
					 fontWeight="bold" 
					 />
		<s:TextArea id="applicationDescription"
					width="100%"
					height="100%"
					editable="false"
					selectable="false"
					borderVisible="false"
					color="#CACACA"
					fontFamily="Arial"
					fontSize="10" 
					/>
		<mx:Spacer height="20" />

		<s:HGroup horizontalAlign="right" 
				  gap="10" 
				  width="100%">
			<button:VDOMButton id="changeApplication" 
								   label="{getLocalesWord('change_application_edit')}" />

			<button:VDOMButton id="setSelectApplication" 
								   label="{getLocalesWord('change_application_open_in_editor' )}" />
		</s:HGroup>

	</s:VGroup>
</s:HGroup>
