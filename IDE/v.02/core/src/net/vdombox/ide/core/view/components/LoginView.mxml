<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/halo">
	
	<s:VGroup right="100" left="20" styleName="loginForm" top="100">
		<s:HGroup width="100%" verticalAlign="middle">
			<s:Label text="{ resourceManager.getString( 'LoginForm', 'username' ) }"
					 width="100%" textAlign="right"/>
			<s:TextInput id="username"
						 width="240" />
		</s:HGroup>
		<s:HGroup width="100%" verticalAlign="middle">
			<s:Label text="{ resourceManager.getString( 'LoginForm', 'password' ) }"
					 width="100%" textAlign="right" />
			<s:TextInput id="password"
						 width="240" />
		</s:HGroup>
		<s:HGroup width="100%" verticalAlign="middle">
			<s:Label text="{ resourceManager.getString( 'LoginForm', 'hostname' ) }"
					 width="100%" textAlign="right"/>
			<s:TextInput id="hostname"
						 width="240" />
		</s:HGroup>
		<s:HGroup width="100%" verticalAlign="middle">
			<s:Label text="{ resourceManager.getString( 'LoginForm', 'language' ) }"
					 width="100%" textAlign="right"/>
			<mx:ComboBox id="selectLang"
						 width="240" />
		</s:HGroup>
	</s:VGroup>
	<s:Button id="submitButton"
			  height="35" label="{ resourceManager.getString( 'LoginForm', 'ok_button' ) }"
			  bottom="0" right="0"/>
</s:NavigatorContent>
