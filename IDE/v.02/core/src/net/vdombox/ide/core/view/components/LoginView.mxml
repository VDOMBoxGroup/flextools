<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark">

	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;

			import net.vdombox.ide.core.events.LoginViewEvent;
			import net.vdombox.ide.core.model.vo.LocaleVO;

			import spark.events.IndexChangeEvent;

			[Bindable]
			public var languages : ArrayList;

			[Bindable]
			private var _selectedLanguage : *;

			[Bindable]
			public var username : String;

			[Bindable]
			public var password : String;

			[Bindable]
			public var hostname : String;

			public function get selectedLanguage() : LocaleVO
			{
				return _selectedLanguage as LocaleVO;
			}

			public function set selectedLanguage( value : LocaleVO ) : void
			{
				_selectedLanguage = value;
			}

			private function selectLang_changeHandler() : void
			{
				dispatchEvent( new LoginViewEvent( LoginViewEvent.LANGUAGE_CHANGED ) );
			}

			private function submitButton_clickHandler() : void
			{
				dispatchEvent( new LoginViewEvent( LoginViewEvent.SUBMIT ) );
			}

			override protected function keyDownHandler( event : KeyboardEvent ) : void
			{
				if ( event.keyCode == 13 )
					dispatchEvent( new LoginViewEvent( LoginViewEvent.SUBMIT ) );
			}
		]]>
	</fx:Script>

	<s:VGroup gap="10" styleName="loginForm"
			  left="20" right="100" top="50">

		<s:HGroup gap="20" width="100%"
				  verticalAlign="middle">

			<s:Label text="{ resourceManager.getString( 'LoginForm', 'username' ) }" width="100%"
					 color="white" fontFamily="Verdana" fontSize="14" textAlign="right"/>

			<s:TextInput focusEnabled="false" text="@{ username }" width="240"/>

		</s:HGroup>

		<s:HGroup gap="20" width="100%"
				  verticalAlign="middle">

			<s:Label text="{ resourceManager.getString( 'LoginForm', 'password' ) }" width="100%"
					 color="white" fontFamily="Verdana" fontSize="14" textAlign="right"/>

			<s:TextInput focusEnabled="false" text="@{ password }" width="240"/>

		</s:HGroup>

		<s:HGroup gap="20" width="100%"
				  verticalAlign="middle">

			<s:Label text="{ resourceManager.getString( 'LoginForm', 'hostname' ) }" width="100%"
					 color="white" fontFamily="Verdana" fontSize="14" textAlign="right"/>

			<s:TextInput focusEnabled="false" text="@{ hostname }" width="240"/>

		</s:HGroup>

		<s:HGroup gap="20" width="100%"
				  verticalAlign="middle">

			<s:Label text="{ resourceManager.getString( 'LoginForm', 'language' ) }" width="100%"
					 color="white" fontFamily="Verdana" fontSize="14" textAlign="right"/>

			<s:ComboBox id="selectLang"
						dataProvider="{ languages }" focusEnabled="false" labelField="description" width="240"
						change="selectLang_changeHandler()"
						selectedItem="@{ _selectedLanguage }"/>

		</s:HGroup>

	</s:VGroup>

	<s:Group height="35" width="100%"
			 bottom="0">

		<s:Button id="submitButton"
				  height="35" label="{ resourceManager.getString( 'LoginForm', 'ok_button' ) }" minWidth="100"
				  fontFamily="Verdana" fontSize="14" right="-2" skinClass="net.vdombox.ide.core.view.skins.InitialWindowButtonSkin"
				  click="submitButton_clickHandler()"/>
	</s:Group>
</s:Group>


