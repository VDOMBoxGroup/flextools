<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="net.vdombox.components.*" xmlns:button="net.vdombox.ide.common.view.components.button.*"
		creationComplete="sparkskin1_creationCompleteHandler(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.ide.core.view.components.AlertWindow")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.ide.common.view.components.VDOMImage;
			
			[Bindable]
			[Embed( source = "assets/Warning.png" )]
			public var wanted : Class;
			
			[Embed( source = "assets/no_warning.png" )]
			public var no_warning : Class;
			
			protected function sparkskin1_creationCompleteHandler(event:FlexEvent):void
			{
				if ( hostComponent.state == "question" )
				{
					/*okButton.visible = true;
					okButton.includeInLayout = true;
					cancelButton.visible = true;*/
					noButton.label = resourceManager.getString( 'Core_General', 'error_no' );
					noButton.icon = no_warning;
				}
				else
				{
					okButton.visible = false;
					okButton.includeInLayout = false;
					cancelButton.visible = false;
				}
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabledAndInactive"/>
		<s:State name="normalAndInactive" />
		<s:State name="disabled" />
		<s:State name="normal" />
		<s:State name="question" />
	</s:states>
	
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:VGroup left="9" top="9" right="9" bottom="9" gap="0">
		
		<s:Group width="100%" minHeight="32">
			<s:TitleBar id="titleBar"
						minHeight="32" width="100%"
						skinClass="net.vdombox.ide.common.view.skins.PopupWindowTitleBarSkin"/>
		</s:Group>	
			
		<s:Group width="100%" height="100%">
				
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="#2f2f2f" />
				</s:fill>
			</s:Rect>
			
			<s:HGroup width="100%" height="100%" 
					  paddingLeft="15" paddingRight="15" paddingTop="10" paddingBottom="10"
					  verticalAlign="middle">
					
				<mx:Image id="image" width="48" height="48" 
						  source="{ wanted }"/>
					
				<s:TextArea text="{hostComponent.content}" verticalAlign="middle"
							width="100%" height="100%" paddingTop="5"
							editable="false" contentBackgroundAlpha="0" borderVisible="false" color="#FFFFFF"/>
					
			</s:HGroup>
				
		</s:Group>
			
		<s:Group width="100%" height="36">
				
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="#3a3a3a" />
				</s:fill>
			</s:Rect>
				
			<s:HGroup width="100%" height="100%" horizontalAlign="right" verticalAlign="middle" paddingRight="10">
				
				<button:VDOMButton id="cancelButton" 
								   label="{ resourceManager.getString( 'Core_General', 'error_cancel' ) }" click="{ hostComponent.cancelClose() }"/>
				
				<mx:Spacer width="100%"/>
				
				<button:VDOMButton id="noButton"
								   label="{ resourceManager.getString( 'Core_General', 'error_Close' ) }" click="{hostComponent.noClose()}"/>
				
				<button:VDOMButton id="okButton" icon="{ VDOMImage.Save }"
								   label="{ resourceManager.getString( 'Core_General', 'error_save' ) }" click="{hostComponent.okClose()}"/>
				
			</s:HGroup>
				
		</s:Group>
			
	</s:VGroup>
</s:SparkSkin>
