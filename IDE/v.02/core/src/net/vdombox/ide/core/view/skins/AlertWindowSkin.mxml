<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="net.vdombox.components.*" xmlns:button="net.vdombox.ide.common.view.components.button.*"
		creationComplete="sparkskin1_creationCompleteHandler(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.ide.core.view.components.AlertWindow")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.ide.common.view.components.VDOMImage;
			
			[Embed( source = "assets/Warning.png" )]
			public var wanted : Class;
			
			[Embed( source = "assets/Question.png" )]
			public var question : Class;
			
			protected function sparkskin1_creationCompleteHandler(event:FlexEvent):void
			{
				if ( hostComponent.state == "question" )
				{
					image.source = question;
					okButton.visible = true;
					noButton.label = "No";
				}
				else
				{
					image.source = wanted;
					okButton.visible = false;
				}
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabledAndInactive"/>
		<s:State name="normalAndInactive" />
		<s:State name="disabled" />
		<s:State name="normal" />
		<s:State name="question" />
	</s:states>
	
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:VGroup left="9" top="9" right="9" bottom="9" gap="0">
		
		<s:Group width="100%" minHeight="32">
			<s:TitleBar id="titleBar"
						minHeight="32" width="100%"
						skinClass="net.vdombox.ide.common.view.skins.PopupWindowTitleBarSkin"/>
		</s:Group>	
			
		<s:Group width="100%" height="100%">
				
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="#3A3A3A" />
				</s:fill>
			</s:Rect>
			
			<s:HGroup width="100%" height="100%" paddingLeft="15" paddingRight="15" paddingTop="10" paddingBottom="10">
					
				<mx:Image id="image"/>
					
				<s:TextArea text="{hostComponent.content}"
							width="100%" height="100%" paddingTop="5"
							editable="false" contentBackgroundAlpha="0" borderVisible="false" color="#FFFFFF"/>
					
			</s:HGroup>
				
		</s:Group>
			
		<s:Group width="100%" height="36">
				
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:BitmapFill source="{VDOMImage.Fon_Texture}" />
				</s:fill>
			</s:Rect>
				
			<s:HGroup width="100%" height="100%" horizontalAlign="right" verticalAlign="middle" paddingRight="10">
				
				<button:VDOMButton id="okButton" label="OK" click="{hostComponent.okClose()}"/>
				
				<button:VDOMButton id="noButton" label="Close" click="{hostComponent.noClose()}"/>
				
			</s:HGroup>
				
		</s:Group>
			
	</s:VGroup>
</s:SparkSkin>
