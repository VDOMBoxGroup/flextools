<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="net.vdombox.components.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.ide.core.view.components.ApplicationsIconsChoosWindow")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.ide.core.view.components.GalleryItemRenderer;
			
			protected function iconsList_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				var d : * = "";
				if ( iconsList.skin && iconsList.skin[ "background" ] )
					iconsList.skin[ "background" ].alpha = 0;
				
				iconsList.addEventListener( GalleryItemRenderer.RENDERER_DOUBLE_CLICKED, doubleClickedFun, true, 0, true);
			}
			
			private function doubleClickedFun( event : Event ) : void
			{
				hostComponent.selectIcon();
			}
			
			private function getLocalesWord( word : String): String
			{
				return resourceManager.getString( 'Core_General', word );
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabledAndInactive" />
		<s:State name="normalAndInactive" />
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:Rect left="9" top="9" right="9" bottom="9">
		<s:fill>
			<s:SolidColor color="#333333"/>
		</s:fill>
	</s:Rect>
	
	<s:VGroup left="9" top="9" right="9" bottom="9" gap="10">
		
		<s:Group width="100%" height="42">
			<s:TitleBar id="titleBar" 
						width="100%" height="100%"
						skinClass="net.vdombox.view.skins.PopupWindowTitleBarSkin"/>
			
			<s:VGroup right="10" height="42" verticalAlign="middle" >
				<s:Button id="closeButton"
						  skinClass="net.vdombox.view.skins.MainCloseBtnSkin"
						  click="hostComponent.close()"/>	
			</s:VGroup>
			
		</s:Group>	
	<s:Group width="100%" height="100%" >
		<s:List id="iconsList" borderVisible="false" x="10"
				width="100%" height="100%"
				
				itemRenderer="net.vdombox.ide.core.view.components.GalleryItemRenderer"
				creationComplete="iconsList_creationCompleteHandler(event)" >
			
			<s:layout>
				<s:TileLayout />
			</s:layout>
		</s:List>
	</s:Group>	
		<s:Group width="100%" height="50" >
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:BitmapFill source = "@Embed('/assets/texture_ide_sidebar.png')" smooth="true" fillMode="repeat"/>
				</s:fill>
			</s:Rect>
			<s:Rect width="100%" height="10">
				<s:fill>
					<!--<s:SolidColor color="black" alpha="0." />-->
					<s:LinearGradient rotation="90">
						<s:GradientEntry color="black" alpha=".2"/>
						<s:GradientEntry color="black" alpha=".0"/>
					</s:LinearGradient>
				</s:fill>
			</s:Rect>	
			
		<s:HGroup width="100%" paddingLeft="13" paddingRight="13" paddingTop="13" paddingBottom="13">
			
			<components:VdomButton id="canselBt"
								   label="{getLocalesWord('iconchooser_cancel')}"
								   click="hostComponent.close()"  />
			<mx:Spacer width="100%"/>
			<components:VdomButton id="addImageBt" width="45"
								   label="+"  fontWeight="bold"	 />
			<components:VdomButton id="selectBt"
									label="{getLocalesWord('iconchooser_ok')}"  	
									click="hostComponent.selectIcon()" />
		</s:HGroup>
		</s:Group>
		
	</s:VGroup>
	
	
</s:SparkSkin>
