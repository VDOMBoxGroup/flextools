<s:SparkSkin
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/halo"
	
	alpha.disabledGroup="0.5" width="500" height="400"
	>
	
	<fx:Metadata>
		[HostComponent("Object")]
	</fx:Metadata>
	
	<fx:Script>
	<![CDATA[
		import mx.collections.ArrayList;
		import mx.events.FlexEvent;
		import mx.logging.ILogger;
		import mx.logging.Log;
		/*  Define the skin elements that should not be colorized.
		 *  For WindowedApplication, border and status bar background are colorized,
		 *  but the content area and status text are not.
		 *  Exclude the titleBar because it is a SparkSkin and we
		 *  don't want to colorize it twice.
		 *
		 * @langversion 3.0
		 * @playerversion Flash 10
		 * @playerversion AIR 1.5
		 * @productversion Flex 4
		 */
		static private const exclusions:Array = ["backgroundRect", "contentGroup", "titleBar",
												 "titleBarBackgroundRect", "statusText",
												 "borderBgFill"];

		/**
		 * @inheritDoc
		 *
		 * @langversion 3.0
		 * @playerversion Flash 10
		 * @playerversion AIR 1.5
		 * @productversion Flex 4
		 */
		override public function get colorizeExclusions():Array {return exclusions;}
	]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" stateGroups="disabledGroup" />
		<s:State name="normalAndInactive" stateGroups="inactiveGroup" />
		<s:State name="disabledAndInactive" stateGroups="disabledGroup, inactiveGroup" />
	</s:states>
	
	<!-- layer 1: background fill -->
	<!--- Defines the background color of the skin. -->
	<s:Rect id="backgroundRect" left="0" right="0" top="0" bottom="0" radiusX="7" radiusY="7">
		<s:stroke>
			<s:SolidColorStroke color="0xCCCCCC" weight="1" />
		</s:stroke>
		<s:fill>
			<!--- @private -->

			<s:LinearGradient id="bgFill" rotation="90">
				<s:GradientEntry color="0x333333" />
				<s:GradientEntry color="0x000000" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<!-- title bar background fill for when the title bar is inactive -->
	<!--- Defines the background color of the title bar. -->
	
	<s:Group id="topMask" left="1" right="1" top="1" bottom="1" >
		<s:Rect width="100%" height="100%" radiusX="7" radiusY="7">
			<s:fill>
				<s:SolidColor color="0x000000" alpha="1" />
			</s:fill>
		</s:Rect>
	</s:Group>
	
	<!-- layer 2: titlebar + content + status bar -->
	<s:Group left="1" right="1" top="1" bottom="1" mask="{topMask}" >
		
		<s:TitleBar id="titleBar" skinClass="net.vdombox.ide.core.view.skins.MainWindowTitleBarSkin" width="100%" minHeight="50" alpha.inactiveGroup="0.5" />
		
		<!--<s:Group height="50" width="100%">
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="0x333333" />
				</s:fill>
			</s:Rect>
		</s:Group>-->
		
		<s:Rect top="50" width="100%" height="35">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0xCCCCCC" />
					<s:GradientEntry color="0x888888" />
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		
		<s:Rect top="85" bottom="15" width="100%" height="100%" minHeight="0" minWidth="0">
			<s:fill>
				<s:SolidColor color="0x999999" />
			</s:fill>
		</s:Rect>
		
		<s:ButtonBar id="tabBar"
			
			requireSelection="true"
			height="25" top="25" left="100"/>
		
		<s:Group width="100%" height="35" top="50">
			<s:layout>
				<s:HorizontalLayout verticalAlign="middle" paddingLeft="100" />
			</s:layout>
			
			<s:Group id="toolsetBar">
				<s:layout>
					<s:HorizontalLayout/>
				</s:layout>
			</s:Group>
			
			<!--<mx:Spacer width="100%" />
			<s:Button width="70"/>-->
		</s:Group>
		
		<!-- content -->
		<!--- Defines the Group container where the content children get pushed into and laid out. -->
		<s:Group id="contentGroup"
				 top="85" bottom="15" width="100%" height="100%" minHeight="0" minWidth="0"/>
		
		<!-- status bar -->
		<!--- Defines the Group container for the status bar. -->
		<s:Group id="statusBar"
				 bottom="0" width="100%" minHeight="15" >
			
			<!-- status bar fill -->
			<s:Rect left="0" right="0" top="0" bottom="0">
				<s:fill>
					<s:SolidColor color="0xCCCCCC" />
				</s:fill>
			</s:Rect>
			
			<!-- status bar highlight -->
			<s:Rect left="1" right="1" top="1" bottom="0" >
				<s:stroke>
					<s:SolidColorStroke color="0xCCCCCC" />
				</s:stroke>
			</s:Rect>
			
			<!-- status text -->
			<!--- Defines the Label control for the text in the status bar. -->
			<s:Label id="statusText" top="2" bottom="2" left="10" right="10" verticalAlign="middle" 
					 fontSize="10" color="0x585858" width="100%" maxDisplayedLines="1" />
			
		</s:Group> 
		
	</s:Group>
	<mx:Image id="settingsButton"
		source="@Embed('assets/main/vdom_logo.png')"
		buttonMode="true"
		x="20" y="20"
		/>
	<!--<s:BitmapImage 
				   source="@Embed('assets/main/vdom_logo.png')" 
				   x="20" y="20"
				   smooth="false"
				   
				   />-->
	<!-- layer 3: gripper -->
	<!--- 
	Defines the Button control for the gripper button. 
	By default, the button uses the spark.skins.spark.windowChrome.GripperSkin class
	to define the skin for the gripper button.
	
	@see spark.skins.spark.windowChrome.GripperSkin 
	-->
	<s:Button id="gripper" right="3" bottom="3" tabEnabled="false" 
			  skinClass="spark.skins.spark.windowChrome.GripperSkin" /> 
	
	<!-- layer 4: border -->
	
