<s:SparkSkin xmlns:components="net.vdombox.ide.core.view.components.*" 
			 xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:mx="library://ns.adobe.com/flex/mx" 
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 
			 height="600" width="800">

	<fx:Metadata>
		[HostComponent("net.vdombox.ide.core.view.components.MainWindow")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import mx.binding.utils.BindingUtils;
			
			import net.vdombox.ide.common.model.vo.ResourceVO;
			import net.vdombox.ide.core.events.MainWindowEvent;
			static private const exclusions : Array = [ "backgroundRect", "contentGroup", "titleBar",
														"titleBarBackgroundRect", "statusText", "borderBgFill" ];

			override public function get colorizeExclusions() : Array
			{
				return exclusions;
			}
			
			
		]]>
	</fx:Script>

	<s:states>

		<s:State name="normal" />

		<s:State name="disabled" stateGroups="disabledGroup" />

		<s:State name="normalAndInactive" stateGroups="inactiveGroup" />

		<s:State name="disabledAndInactive"
				 stateGroups="disabledGroup, inactiveGroup" />
	</s:states>
		
	<!-- layer 1: background fill -->

	<s:Rect id="backgroundRect"
			bottom="0" left="0" right="0" top="0"
			radiusX="7" radiusY="7">
		
		<s:stroke>
			<s:SolidColorStroke color="#424242" weight="9"/>
		</s:stroke>

		<s:fill>
			<s:SolidColor color="#1d1d1d" />	
		</s:fill>
		
	</s:Rect>
	
	<!-- title bar background fill for when the title bar is inactive -->
	<s:Group id="topMask"
			 bottom="9" left="9" right="9" top="9">

		<s:Rect height="100%" width="100%">
			<s:fill>
				<s:SolidColor color="0x000000"/>
			</s:fill>
		</s:Rect>
	</s:Group>
	
	
	<!-- layer 2: titlebar + content + status bar -->
	<s:VGroup bottom="9" left="9" right="9" top="9" gap="0"
			  >
		
		<!--mask="{topMask}"-->

		<s:Group width="100%" >
			<s:TitleBar id="titleBar"
						minHeight="32" width="100%"
						skinClass="net.vdombox.ide.core.view.skins.MainWindowTitleBarSkin" />
			
			
			
		</s:Group>
		
		<s:Line width="100%" yFrom="33" yTo="33" >
			<s:stroke>
				<s:SolidColorStroke color="#424242" weight="3"/>
			</s:stroke>
		</s:Line>
			
		<s:Group height="85" width="100%">
			<s:Rect height="100%" width="100%">
				<s:fill>
					<s:LinearGradient rotation="90">
						<s:GradientEntry color="#2d2d2d" />
						<s:GradientEntry color="#000000" />
					</s:LinearGradient>
				</s:fill>
			</s:Rect>
			
			
			<s:Group height="100%" width="100%">
				
				<s:layout>
					
					<s:HorizontalLayout paddingLeft="100" verticalAlign="middle" />
				</s:layout>
				
				<s:Group id="toolsetBar"
						 width="100%" height="100%">
					
					<s:layout>
						<s:HorizontalLayout gap="20" paddingTop="-10"/>
					</s:layout>
				</s:Group>
				
				<mx:Spacer width="100%" />
				
				<s:VGroup width="190" height="100%" verticalAlign="middle">
					<s:Group width="100%" height="60%" >
						
						<s:Rect width="100%" height="100%">
							<s:fill>
								<s:SolidColor color="#424242" />
							</s:fill>
						</s:Rect>
						
						<s:Group left="1" top="1" right="1" bottom="1">
							
							<s:Rect width="100%" height="100%">
								<s:fill>
									<s:LinearGradient rotation="90">
										<s:GradientEntry color="#3F3F3F" />
										<s:GradientEntry color="#191919" />
									</s:LinearGradient>
								</s:fill>
							</s:Rect>
							
							<s:HGroup width="100%" height="100%" verticalAlign="middle" paddingLeft="10" gap="10">
								<mx:Image id="iconApplication" width="{iconApplication.height}" height="60%" smoothBitmapContent="true"/>
								
								<s:VGroup width="100%" height="60%">
									<s:TextInput id="nameApplication" 
												 width="100%" borderVisible="false" editable="false" selectable="false" contentBackgroundAlpha="0"
												 color="#FFFFFF" fontSize="14"/>
									
									<s:Label id="applicationManagerLabel" 
											 color="#25D9FF" textDecoration="underline" text="Open App Manager"
											 click="dispatchEvent( new MainWindowEvent( MainWindowEvent.SHOW_APP_MANAGER ) )"/>
								</s:VGroup>
								
							</s:HGroup>
						</s:Group>

					</s:Group>
				</s:VGroup>

				<mx:Spacer width="12" />
			</s:Group>
		</s:Group>
		
		<!-- content -->

		<s:Group id="contentGroup"
				 height="100%" minHeight="0" minWidth="0"
				 width="100%"/>
	</s:VGroup>
	
	<mx:Image id="settingsButton" 
			  x="30" y="57" 
			  smoothBitmapContent="true"
			  source="@Embed('assets/login/logo.png')">
		
		<mx:filters>
			<s:GlowFilter color="0x000000" />
		</mx:filters>
	</mx:Image>
	
	<!-- layer 3: gripper -->
	<s:Button id="gripper" right="3" bottom="3"
			  skinClass="spark.skins.spark.windowChrome.GripperSkin" tabEnabled="false"
			  right.normal="8" bottom.normal="8"/>
</s:SparkSkin>
