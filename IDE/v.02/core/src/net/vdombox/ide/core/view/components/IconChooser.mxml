<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" >
	<fx:Script>
		<![CDATA[
			import net.vdombox.ide.core.events.IconChooserEvent;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:states>
		
		<s:State name="default" />
		
		<s:State name="gallery" />
	</s:states>
	
	<mx:Image id="selectedIcon"
			  height="64" width="64" />
	
	<s:Label buttonMode="true" text="{ resourceManager.getString( 'Core_General', 'iconchooser_select_icon' ) }"
			 fontFamily="Verdana" fontSize="14" textDecoration="underline"
			 click="dispatchEvent( new IconChooserEvent (IconChooserEvent.OPEN_ICON_LIST ) );" />
	
	<s:Label buttonMode="true" text="{ resourceManager.getString( 'Core_General', 'iconchooser_load_from_computer' ) }"
			 fontFamily="Verdana" fontSize="14" textDecoration="underline"
			 click="dispatchEvent( new IconChooserEvent( IconChooserEvent.LOAD_ICON ))" />
</s:VGroup>
