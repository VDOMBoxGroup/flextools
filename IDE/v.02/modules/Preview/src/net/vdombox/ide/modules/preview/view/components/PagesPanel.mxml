<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:mx="library://ns.adobe.com/flex/halo"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 height="58">

	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;

			import net.vdombox.ide.common.vo.PageVO;
			import net.vdombox.ide.modules.preview.events.PagesPanelEvent;
			[Bindable]
			private var _pages : ArrayList;

			public function get selectedPage() : PageVO
			{
				return pagesComboBox.selectedItem as PageVO;
			}

			public function set selectedPage( value : PageVO ) : void
			{
				pagesComboBox.selectedItem = value;
			}

			public function set pages( value : Array ) : void
			{
				if ( value )
					_pages = new ArrayList( value );
				else
					_pages = null;
				
				pagesComboBox.selectedIndex = -1;
			}
		]]>
	</fx:Script>

	<s:ComboBox id="pagesComboBox"
				dataProvider="{ _pages }" labelField="name" width="100%"
				verticalCenter="0"
				change="dispatchEvent( new PagesPanelEvent( PagesPanelEvent.PAGE_CHANGED ) )"/>
</s:Panel>
