<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/halo"
				
				creationComplete="creationCompleteHandler()">

	<fx:Script>
		<![CDATA[
			import net.vdombox.ide.common.vo.ResourceVO;
			import net.vdombox.ide.modules.tree.events.ItemRendererEvent;

			[Bindable]
			private var _typeResource : ResourceVO;

			public function set typeResource( value : ResourceVO ) : void
			{
				_typeResource = value;
			}

			private function creationCompleteHandler() : void
			{
				dispatchEvent( new ItemRendererEvent( ItemRendererEvent.CREATED ) );
			}
		]]>
	</fx:Script>

	<s:states>

		<s:State name="normal" />

		<s:State name="hovered" />

		<s:State name="selected" />
	</s:states>

	<s:Rect bottom="0" left="0" right="0" top="0">

		<s:fill>

			<s:SolidColor color="0x999999"
						  alpha="0" alpha.hovered="0.2" alpha.selected="0.6" />
		</s:fill>
	</s:Rect>

	<s:HGroup height="100%" width="100%">

		<mx:Image height="58" source="{ _typeResource.data }" width="58" />

		<s:VGroup height="100%" width="100%">

			<s:Label text="{ data.displayName }" />

			<s:RichText height="100%" text="{ data.description }" width="100%" />
		</s:VGroup>
	</s:HGroup>
</s:ItemRenderer>
