<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
		   xmlns:containers="vdom.containers.*"
		   xmlns:colorMenu02="vdom.components.treeEditor.colorMenu02.*"
		   xmlns:ns1="vdom.components.treeEditor.colormenu.*"
		   xmlns:treeEditor="vdom.components.treeEditor.*"
	
		   height="100%" label="add Element" width="100%"
		   backgroundColor="#3d3d3d"
		   
		   creationComplete="creationCompleteHandler()" hide="hideHendler()"
		   show="showHnadler()">

	<mx:Metadata>
		[ResourceBundle("Tree")]
	</mx:Metadata>

	<mx:Script source="TreeEditorScript.as" />

	<mx:HBox height="100%" width="100%">

		<mx:Canvas id="main"
				   height="100%" width="100%"
				   backgroundColor="#5C5C5C">
		</mx:Canvas>

		<mx:Canvas height="100%" horizontalScrollPolicy="off"
				   verticalScrollPolicy="auto">

			<mx:VBox width="210"
					 paddingLeft="3" paddingRight="10" top="10" verticalGap="10">

				<containers:ClosablePanel 
										  title="{resourceManager.getString('Tree','menu')}"
										  width="100%"
										  paddingBottom="0" paddingLeft="0"
										  paddingRight="0" paddingTop="0">

					<mx:VBox width="100%"
							 backgroundColor="0x999999" verticalAlign="0"
							 verticalGap="1">

						<treeEditor:TreeButton click="addTreeElementLauncher()"
											   iconBt="@Embed(source='/assets/treeEditor/new_page.png')"
											   labelBt="{resourceManager.getString('Tree','new_page')}" />

						<treeEditor:TreeButton click="autoSpacing()"
											   iconBt="@Embed(source='/assets/treeEditor/auto_spacing.png')"
											   labelBt="{resourceManager.getString('Tree','auto_Spacing')}" />

						<treeEditor:TreeButton click="expandAll()"
											   iconBt="@Embed(source='/assets/treeEditor/expand_all.png')"
											   labelBt="{resourceManager.getString('Tree','expand_all')}" />

						<treeEditor:TreeButton click="showSignature()"
											   iconBt="@Embed(source='/assets/treeEditor/show_signature.png')"
											   labelBt="{resourceManager.getString('Tree','show_signature')}" />

						<treeEditor:TreeButton click="{revert()}"
											   iconBt="@Embed(source='/assets/treeEditor/revert.png')"
											   labelBt="{resourceManager.getString('Tree','undo')}" />

						<treeEditor:TreeButton id="btSave"
											   click="{saveToServer()}"
											   iconBt="@Embed(source='/assets/treeEditor/save.png')"
											   labelBt="{resourceManager.getString('Tree','save')}" />
					</mx:VBox>
				</containers:ClosablePanel>

				<treeEditor:Properties id="_curTree"
									   width="100%"
									   paddingBottom="0" paddingLeft="0"
									   paddingRight="0" paddingTop="0" />

				<containers:ClosablePanel 
										  title="{resourceManager.getString('Tree','levels')}"
										  width="100%"
										  paddingBottom="0" paddingLeft="0"
										  paddingRight="0" paddingTop="0">

					<colorMenu02:ColorMenu2 id="colmen2"
											text="11111111" />
				</containers:ClosablePanel>
			</mx:VBox>
		</mx:Canvas>
	</mx:HBox>
</mx:Canvas>
