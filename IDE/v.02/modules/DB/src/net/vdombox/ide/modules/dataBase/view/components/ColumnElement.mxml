<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%">
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var columnXML : XML;
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:HGroup width="100%" height="100%" >
		
		<s:HGroup width="60%" height="100%" gap="0">
			<mx:Image width="10" height="10"/>
			
			<s:TextInput text="{columnXML.@name}" width="100%" editable="false" selectable="false" contentBackgroundAlpha="0" borderVisible="false" />
		</s:HGroup>
		
		<s:TextInput text="{columnXML.@type}" width="40%" editable="false" selectable="false" contentBackgroundAlpha="0" borderVisible="false" />
		
		
	</s:HGroup>
	
</s:Group>
