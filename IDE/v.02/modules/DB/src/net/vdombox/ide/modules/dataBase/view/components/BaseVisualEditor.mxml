<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300" xmlns:components="net.vdombox.components.*">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.ide.common.vo.PageVO;
			
			private var _objectVO : PageVO;
			
			public function get editorID() : String
			{
				return _objectVO ? _objectVO.id : "";
			}
			
			public function get editorName() : String
			{
				return _objectVO ? _objectVO.name : "";
			}
			
			public function get objectVO() : Object
			{
				return _objectVO ? _objectVO : null;
			}
			
			public function set objectVO( value : Object ) : void
			{
				_objectVO = value as PageVO;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Group id="workLayers"
			 bottom="0" left="0" right="0" top="0">
		<s:Rect height="100%" width="100%">
			<s:fill>
				<s:BitmapFill source = "@Embed('assets/bg_for_ide_bright.png')" smooth="true" fillMode="repeat"/>
			</s:fill>
		</s:Rect>
		
		<components:VDOMScroller id="scroller" height="100%" width="100%">
			<s:Group>
				<s:Group id="linkagesLayer"/>
				<s:Group id="contentGroup"/>
			</s:Group>
		</components:VDOMScroller>
	</s:Group>
	
</s:Group>
