<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.ide.modules.dataBase.view.components.windows.RenameTableWindow")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.events.TextOperationEvent;
			
			
			protected function tableName_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				tableName.text = hostComponent.nameTable;
				tableName.selectAll();
				tableName.setFocus();
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabledAndInactive" />
		<s:State name="normalAndInactive" />
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:VGroup width="100%" height="100%" paddingTop="10" paddingLeft="10" paddingRight="10" gap="8">
		
		
		<s:HGroup width="100%" height="20" verticalAlign="middle">
			
			<s:Label text="{ resourceManager.getString( 'DataBase_General', 'create_new_object_window_Name' ) }" />
			
			<mx:Spacer width="100%" />
			
			<s:TextInput id="tableName"  width="300" creationComplete="tableName_creationCompleteHandler(event)"/>
			
		</s:HGroup>
		
		<s:HGroup width="100%" height="20" verticalAlign="middle" horizontalAlign="right">
			
			<s:Button id="ok" label="{ resourceManager.getString( 'DataBase_General', 'create_new_object_window_OK' ) }" click="{hostComponent.ok_close_window()}"/>
			
			<s:Button id="cancel" label="{ resourceManager.getString( 'DataBase_General', 'create_new_object_window_Cancel' ) }" click="{hostComponent.no_close_window()}"/>
			
		</s:HGroup>
		
	</s:VGroup>
</s:Skin>
