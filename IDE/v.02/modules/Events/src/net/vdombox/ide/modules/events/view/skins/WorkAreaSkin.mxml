<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:components="net.vdombox.ide.modules.events.view.components.*"
			 xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:mx="library://ns.adobe.com/flex/halo"
			 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx1="library://ns.adobe.com/flex/mx" xmlns:components1="net.vdombox.components.*">

	<fx:Metadata>
		<![CDATA[ 
		[HostComponent("net.vdombox.ide.modules.events.view.components.WorkArea")]
		]]>
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.view.skins.VDOMScrollBarSkin.VDOMHScrollBarSkin;
			import net.vdombox.view.skins.VDOMScrollBarSkin.VDOMVScrollBarSkin;
			
			protected function scroller_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				scroller.verticalScrollBar.setStyle( "skinClass", VDOMVScrollBarSkin );
				scroller.horizontalScrollBar.setStyle( "skinClass", VDOMHScrollBarSkin );
			}
			
		]]>
	</fx:Script>

	<s:states>

		<s:State name="normal"/>
		<s:State name="unsaved"/>
		<s:State name="disabled"/>
	</s:states>

	<s:Rect id="backgroundRect"
			bottom="0" left="0" right="0" top="0">

		<s:fill>

			<s:SolidColor color="gray"
						  alpha=".5"/>
		</s:fill>

		<s:stroke>

			<s:SolidColorStroke/>
		</s:stroke>
	</s:Rect>

	<s:Rect height="20"
			left="1" right="1" top="1">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xCDCDCD"/>
				<s:GradientEntry color="0xE8E8E8"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:HGroup height="20"
			  left="1" right="1" top="1"
			  gap="0" paddingRight="20">
		<components:WorkAreaButton id="saveButton"
								   enabled="true" enabled.disabled="false" height="20" icon="@Embed('assets/save.png')"
								   label="{ resourceManager.getString( 'Events_General', 'work_area_save' ) }"
								   highlighted="false" highlighted.unsaved="true"/>
		<components:WorkAreaButton id="undoButton"
								   enabled="false" enabled.unsaved="true" height="20" icon="@Embed('assets/undo.png')"
								   label="{ resourceManager.getString( 'Events_General', 'work_area_undo' ) }"/>
		<mx1:Spacer width="100%" />
		<s:CheckBox id="showHiddenElements" height="20" label="Show hidden" change="hostComponent.showHiddenElementsStateChanged()"/>
	</s:HGroup>

	<s:Group id="workLayers"
			 bottom="0" left="10" right="3" top="30">
		<s:Rect height="100%" width="100%">
			<s:fill>
				<s:SolidColor color="black"
							  alpha="0.0"/>
			</s:fill>
		</s:Rect>

		<components1:VDOMScroller id="scroller" height="100%" width="100%" creationComplete="scroller_creationCompleteHandler(event)">
			<s:Group>
				<s:Group id="linkagesLayer"/>
				<s:Group id="contentGroup"/>
			</s:Group>
		</components1:VDOMScroller>
	</s:Group>
</s:SparkSkin>
