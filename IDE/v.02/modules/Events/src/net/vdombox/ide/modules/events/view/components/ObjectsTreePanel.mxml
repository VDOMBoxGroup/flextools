<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 backgroundAlpha="0"
		 cornerRadius="5"
		 borderAlpha="0"
		 borderVisible="false"
		 skinClass="net.vdombox.ide.modules.events.view.skins.PanelSkin">

	<fx:Script>
		<![CDATA[
			import mx.controls.treeClasses.TreeItemRenderer;
			import mx.events.FlexEvent;
			
			[Embed(source="assets/disclosureClosedIcon.png")]
			public var plus:Class;
			
			[Embed(source="assets/disclosureOpenIcon.png")]
			public var minus:Class;
			
			protected function objectsTree_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				objectsTree.setStyle("disclosureOpenIcon", minus);
				objectsTree.setStyle("disclosureClosedIcon", plus);
			}
			
		]]>
	</fx:Script>
	
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:BitmapFill source = "@Embed('assets/texture_ide_sidebar.png')" smooth="true" fillMode="repeat"/>
		</s:fill>
	</s:Rect>

	<mx:Tree id="objectsTree" maxHorizontalScrollPosition="140" horizontalScrollPolicy="auto"
			 itemRenderer="net.vdombox.components.ObjectsTreePanelItemRenderer"
			 height="100%"
			 width="100%" contentBackgroundAlpha="0"
			 creationComplete="objectsTree_creationCompleteHandler(event)"/>
</s:Panel>
