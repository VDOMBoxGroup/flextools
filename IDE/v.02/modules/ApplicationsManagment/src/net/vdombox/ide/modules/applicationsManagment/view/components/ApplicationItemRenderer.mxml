<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/halo"
				
				creationComplete="creationCompleteHandler( event )">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			public static const RENDERER_CREATED:String = "rendererCreated";
			
			protected function creationCompleteHandler( event : FlexEvent ) : void
			{
				dispatchEvent( new Event( RENDERER_CREATED ) );
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="0x999999" alpha="0" alpha.hovered="0.2"
						  alpha.selected="0.6" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="nameLabel" text="{data.name}" top="5" left="5" right="5" />
	
</s:ItemRenderer>
