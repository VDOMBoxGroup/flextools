<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/halo"
	
	height="100%" width="100%"
	xmlns:components="net.vdombox.ide.modules.applicationsManagment.view.components.*">

	<fx:Script>
		<![CDATA[
			import net.vdombox.ide.modules.applicationsManagment.events.CreateApplicationViewEvent;
		]]>
	</fx:Script>

	<s:states>

		<s:State name="default" />

		<s:State name="gallery" />
	</s:states>

	<s:VGroup 
		bottom="30" left="30" right="30" top="30">

		<components:IconChooser id="iconChooser"
			width="100%" />

		<s:HGroup width="100%">

			<s:Label 
				buttonMode="true" text="Name:"
				
				fontFamily="Verdana" fontSize="14" textDecoration="underline" />

			<s:TextInput id="nameField"
				width="100%" />
		</s:HGroup>

		<s:Label 
			buttonMode="true" text="Description:"
			
			fontFamily="Verdana" fontSize="14" textDecoration="underline" />

		<s:VGroup width="100%">

			<s:Group 
				height="50" width="100%">

				<s:Rect 
					height="100%" width="100%">

					<s:stroke>

						<s:SolidColorStroke color="black" />
					</s:stroke>

					<s:fill>

						<s:SolidColor color="white" />
					</s:fill>
				</s:Rect>

				<s:RichEditableText id="descriptionField"
					height="100%" width="100%" />
			</s:Group>
		</s:VGroup>

		<s:HGroup>

			<s:Button id="saveButton"
				enabled="false" label="Save"
				
				click="dispatchEvent( new CreateApplicationViewEvent( CreateApplicationViewEvent.SAVE ) )" />

			<s:Button 
				label="Cancel"
				
				click="dispatchEvent( new CreateApplicationViewEvent( CreateApplicationViewEvent.CANCEL ) )" />
		</s:HGroup>
	</s:VGroup>
</s:NavigatorContent>
