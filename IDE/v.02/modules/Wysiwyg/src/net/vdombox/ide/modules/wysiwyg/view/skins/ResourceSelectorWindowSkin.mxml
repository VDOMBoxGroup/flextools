<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
			 xmlns:resourceBrowserWindow="net.vdombox.ide.modules.wysiwyg.view.components.windows.resourceBrowserWindow.*"
			 width="790" height="550" minWidth="600" minHeight="500"
			 alpha.disabled="0.5"
			 focusColor.normal="#CCCCCC">
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("net.vdombox.ide.modules.wysiwyg.view.components.windows.ResourceSelectorWindow")]
		]]>
	</fx:Metadata> 
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import net.vdombox.ide.modules.wysiwyg.events.ResourceSelectorWindowEvent;
			
			
			protected function resourcesList_initializeHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				trace ("11111111111111");
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="inactive"/>
		<s:State name="disabled"/>
		<s:State name="closed" stateGroups="closedGroup"/>
		<s:State name="disabledAndClosed" stateGroups="closedGroup"/>
		<s:State name="disabledWithControlBar"/>
		<s:State name="inactiveWithControlBar"/>
		<s:State name="normalWithControlBar"/>
	</s:states>
	
	<!-- Transitions for open and close -->
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:VGroup width="100%" height="100%" gap="0"
			  left="9" top="9" right="9" bottom="9">
		
		<s:Group width="100%" height="42">
			<s:Rect bottom="0" left="0" right="0" top="0">
				<s:fill>
					<s:LinearGradient rotation="90">
						<s:GradientEntry color="#B70000"/>
						<s:GradientEntry color="#A00000"/>
					</s:LinearGradient>
				</s:fill>
			</s:Rect>
			<s:Label text="Resource browser" top="12" left="20" color="#FFFFFF" fontSize="20"/>
		</s:Group>
		
		<s:Group width="100%" height="39">
			
			<s:Rect bottom="0" left="0" right="0" top="0">
				<s:fill>
					<s:LinearGradient rotation="90">
						<s:GradientEntry color="#2f2f2f"/>
						<s:GradientEntry color="#282828"/>
					</s:LinearGradient>
				</s:fill>
			</s:Rect>
			
			<s:HGroup width="100%" verticalAlign="middle" paddingLeft="5" paddingRight="10" top="5">		 
				<s:TextInput id="nameFilter" width="150" borderColor="#999999" color="#666666"
							 fontFamily="Tahoma" fontStyle="italic" text="Filter resource"
							 focusColor.normal="#CCCCCC"/>
				
				<mx:Image id="__spinner" height="18"  width="18" visible="false"/>
				
				<s:Label text="Total Resources:" color="#FFFFFF"/>
				
				<s:Label text="{hostComponent.totalResources}"
						 color="#FFFFFF" fontWeight="bold"/>
				
				<mx:Spacer width="100%"/>
				
				<mx:Button height="29" label="Upload File..." click="hostComponent.uploadFile(event)"
						  cornerRadius="14" icon="@Embed(source='icons/Add.png')"
						  focusColor.normal="#CCCCCC"/>	
			</s:HGroup>
		</s:Group>
		
		<s:Line width="100%" height="1">
			<s:stroke>
				<s:SolidColorStroke color="#424242" alpha="1"/>
			</s:stroke>
		</s:Line>
		<!-- body -->
		<s:Group width="100%" height="100%">
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:BitmapFill source = "@Embed('icons/texture_ide_sidebar.png')" smooth="true" fillMode="repeat"/>
				</s:fill>
			</s:Rect>
			
			<s:VGroup width="100%" height="100%">
				
				<s:Group width="100%" height="100%">
					<s:Rect width="100%" height="100%">
						<s:fill>
							<s:SolidColor color="#000000" alpha="0.2"/>
						</s:fill>
					</s:Rect>
					
					<s:List id="resourcesList" width="100%" height="100%"
								 allowMultipleSelection="{hostComponent.multilineSelected}" 
								 enabled="true"
								 contentBackgroundAlpha="0" contentBackgroundColor="#000000" borderVisible="false"
								 dataProvider="{ hostComponent._resources }"
								 itemRenderer="net.vdombox.ide.modules.wysiwyg.view.components.windows.resourceBrowserWindow.ListItem"
								 
								 x.normal="0" 
								 chromeColor="#777777"
								 focusColor="#CCCCCC" 
								 rollOverColor="#000000" selectionColor="#000000"
								 top="20" left="4" right="2" bottom="10"
								 change="hostComponent.selectResource(event)"
								 initialize="resourcesList_initializeHandler(event)">
						<s:layout>
							<s:TileLayout horizontalGap="4" verticalGap="8" requestedColumnCount="4"  requestedRowCount="2">
								
							</s:TileLayout>
						</s:layout>
					</s:List>
				</s:Group>
				
				<!--  futer  -->
				<s:HGroup width="100%" height="50"
						  paddingBottom="2" paddingLeft="10" paddingRight="10" paddingTop="2"
						  verticalAlign="middle" horizontalAlign="right">
					
					<mx:Button id="cancelButton" width="48" height="29"
							  click="hostComponent.onCancelClick()" cornerRadius="14"
							  icon="@Embed(source='icons/Cancel.png')"
							  focusColor.normal="#CCCCCC"/>
					
					<s:Button height="29" minWidth="88" label="Insert"
							  click="hostComponent.onApplyClick()" color="#B33535" cornerRadius="14"
							  fontSize="18"
							  focusColor.normal="#CCCCCC"/>
					
				</s:HGroup>
				
			</s:VGroup>
			
		</s:Group>
	</s:VGroup>
	
</s:SparkSkin>
