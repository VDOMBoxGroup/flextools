<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="20">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.collections.Sort;
			import mx.collections.SortField;
			
			import net.vdombox.ide.common.model._vo.ObjectListVO;
			import net.vdombox.ide.common.view.components.VDOMScroller;
			import net.vdombox.ide.modules.wysiwyg.events.MultilineWindowEvent;
			
			import spark.events.IndexChangeEvent;
			
			private var _value: String;
			
			public function get value():String
			{
				return _value;
			}
			
			public function set labelField ( label : String ) : void
			{
				valueField.labelField = label;
			}
			
			private var comboBoxData : ArrayCollection = new ArrayCollection();
			
			public function init( _interface : Object, element : String) : void
			{
				
				var codeInterfaceValueRE : RegExp = /\((.*?)\|(.*?)\)/g;
				
				var listValues : Array = [];
				
				var objectListVO : ObjectListVO = new ObjectListVO();
				objectListVO.id = "";
				objectListVO.name = "";
				comboBoxData.addItem( objectListVO );
				var selectedItem : Object = objectListVO;
				
				for each ( objectListVO in _interface )
				{
					comboBoxData.addItem( objectListVO  );
							
					if ( element == objectListVO.id )
						selectedItem = objectListVO;
				}

				if ( comboBoxData )
				{
					comboBoxData.sort = new Sort();
					comboBoxData.sort.fields = [ new SortField( "name", true ) ];
					comboBoxData.refresh();
				}
				
				valueField.dataProvider = comboBoxData;
				valueField.selectedItem = selectedItem;
				_value = selectedItem.id;

			}
			
			private function changeHandler() : void
			{
				_value = valueField.selectedItem.id;
				dispatchEvent( new Event( Event.CHANGE ) );
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#FFFFFF"/>
		</s:fill>
	</s:Rect>
	<mx:Text id="txt"/>
	<s:DropDownList id="valueField" width="100%" height="100%"
				itemRenderer="net.vdombox.ide.modules.wysiwyg.view.components.attributeRenderers.ComboBoxObjectItemRenderer"
				skinClass="net.vdombox.ide.modules.wysiwyg.view.components.attributeRenderers.DropDownListSkin"
				change="changeHandler()" open="{valueField.scroller.setStyle( 'horizontalScrollPolicy', 'off' ) }" />
	
	
</s:Group>
