<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009"
					xmlns:mx="library://ns.adobe.com/flex/halo"
					xmlns:s="library://ns.adobe.com/flex/spark"
					height="100%" width="100%"
					backgroundColor="#70737A">

	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.collections.ArrayList;
			import mx.collections.Sort;
			import mx.collections.SortField;
			
			import net.vdombox.ide.common.vo.TypeVO;

			[Bindable]
			private var typeData : ArrayCollection;

			public function addType( type : TypeVO ) : void
			{
				if ( !typeData )
				{
					typeData = new ArrayCollection();
					typeData.sort = new Sort();
					typeData.sort.fields = [ new SortField( "displayName" ) ];
					typeData.refresh();
				}
				if (type.container != 3)
					typeData.addItem( type );
			}
		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout variableRowHeight="true"/>
	</s:layout>

	<s:List dataProvider="{ typeData }" height="100%" labelField="displayName" width="100%"
			textAlign="center"
			contentBackgroundColor="#5E6367" itemRenderer="net.vdombox.ide.modules.wysiwyg.view.components.TypeItemRenderer" useVirtualLayout="false">

		<s:layout>
			<s:VerticalLayout variableRowHeight="true" gap="10"/>
		</s:layout>
	</s:List>
</s:NavigatorContent>
