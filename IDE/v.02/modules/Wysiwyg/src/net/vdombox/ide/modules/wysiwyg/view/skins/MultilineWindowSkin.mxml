<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ClassComponents="net.vdombox.ide.modules.wysiwyg.view.components.classcomponents.*"
		xmlns="vdom.containers.*"
		xmlns:controls="vdom.controls.*" 
		width="497" height="415" xmlns:ClassComponents1="net.vdombox.ide.modules.wysiwyg.view.components.ClassComponents.*"
		>
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("net.vdombox.ide.modules.wysiwyg.view.components.windows.MultilineWindow")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import net.vdombox.ide.modules.wysiwyg.events.AttributeEvent;
		]]>
	</fx:Script>
	
	
	<!-- states -->
	<s:states>
		<s:State name="inactiveWithControlBar" />
		<s:State name="inactive" />
		<s:State name="disabledWithControlBar" />
		<s:State name="normalWithControlBar" />
		<s:State name="disabled" />
		<s:State name="normal" />
		
	</s:states>
	
	<!-- SkinParts
	name=contentGroup, type=spark.components.Group, required=false
	name=moveArea, type=flash.display.InteractiveObject, required=false
	name=closeButton, type=spark.components.Button, required=false
	name=titleDisplay, type=spark.core.IDisplayText, required=false
	name=controlBarGroup, type=spark.components.Group, required=false
	-->
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:VGroup width="100%" height="100%" 
			  top="9" bottom="9" left="9" right="9"
			  gap="0">
	
	<s:Group width="100%" height="42">
		
		<s:Rect bottom="0" left="0" right="0" top="0">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="#B70000"/>
					<s:GradientEntry color="#A00000"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<s:Label text="Multiline window" top="12" left="20" color="#FFFFFF" fontSize="20"/>
	</s:Group>	
		
	<s:Scroller width="100%" height="100%" horizontalScrollPolicy="off">
		<s:RichEditableText id="textAreaContainer" 
							editable="true"
							selectable="true"
							clipAndEnableScrolling="true"
							text="{hostComponent.attributeValue}"
							height="100%" width="100%"
							minHeight="0"
							backgroundColor="#FFFFFF" bottom="65" fontFamily="Courier New" fontSize="12" left="5" right="5" top="5" 
							
							focusIn="hostComponent.focus = true"/>
	</s:Scroller>
	
	<s:Group width="100%" height="67">
		
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:BitmapFill source = "@Embed('icons/texture_ide_sidebar.png')" smooth="true" fillMode="repeat"/>
			</s:fill>
		</s:Rect>
		
		<s:HGroup height="100%" width="100%" horizontalAlign="right"
				  bottom="0" gap="15" paddingLeft="25" paddingTop="10"
				  paddingRight="15" verticalAlign="middle">
			
			<mx:Button width="138" height="29" 
					  icon="@Embed(source='icons/Add.png')"
					  label="Resources" cornerRadius="15" 
					  click="{hostComponent.showResourceSelecterWindow()}"/>
			
			<mx:Spacer width="100%"/>
			
			<mx:Button width="48" height="29" cornerRadius="15" 
					  icon="@Embed(source='icons/Cancel.png')"
					  click="{hostComponent.cancel_close_window()}"/>
			
			<s:Button width="88" height="29" label="Save" fontSize="18"
					  cornerRadius="15"
					  click="hostComponent.ok_close_window()" />
		</s:HGroup>
		
	</s:Group>	
		
	</s:VGroup>
	
</s:SparkSkin>
