<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 minHeight="20" minWidth="10"
			 creationComplete="creationCompleteHandler()"
			 alpha.disabled="0.5">
	<!-- host component -->

	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("net.vdombox.ide.modules.wysiwyg.view.components.PanelButton")]
		]]>
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import mx.binding.utils.BindingUtils;
			/* Define the skin elements that should not be colorized.
			 For button, the graphics are colorized but the label is not. */
			static private const exclusions : Array = [ "labelDisplay" ];

			/**
			 * @copy spark.skins.SparkSkin#colorizeExclusions
			 */
			override public function get colorizeExclusions() : Array
			{
				return exclusions;
			}

			/**
			 *  @private
			 */

			private function creationCompleteHandler() : void
			{
				BindingUtils.bindSetter( iconChanged, hostComponent, "icon" );
			}

			private function iconChanged( value : Object ) : void
			{
				if ( value )
				{
					buttonIcon.includeInLayout = true;
					buttonIcon.visible = true;
				}
				else
				{
					buttonIcon.includeInLayout = false;
					buttonIcon.visible = false;
				}
			}
		]]>
	</fx:Script>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>

	<!-- layer 2: fill -->
	<s:Rect bottom="0" left="0" right="0" top="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xEAEAE8" color.down="0xAAAAAA" color.over="0xBBBDBD"/>
				<s:GradientEntry color="0xCCCCCC" color.down="0x929496" color.over="0x9FA0A1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:Group bottom="0" left="0" right="0" top="0">

		<s:layout>
			<s:HorizontalLayout paddingLeft="7" paddingRight="7" verticalAlign="middle" gap="2"/>
		</s:layout>

		<mx:Image id="buttonIcon"
				  height="11" source="{ hostComponent.icon }" width="11"/>

		<s:Label id="labelDisplay"
				 paddingTop="4" textAlign="left"
				 maxDisplayedLines="1"/>
	</s:Group>

</s:SparkSkin>
