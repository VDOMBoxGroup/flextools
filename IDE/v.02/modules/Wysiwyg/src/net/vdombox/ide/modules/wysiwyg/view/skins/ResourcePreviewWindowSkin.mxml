<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
			 xmlns:content="net.vdombox.ide.modules.wysiwyg.view.components.windows.resourceBrowserWindow.*"
			 width="700" height="500" minWidth="600" minHeight="450"
			 focusColor="#CCCCCC">
	
	<fx:Metadata>
		<![CDATA[ 
		[HostComponent("net.vdombox.ide.modules.wysiwyg.view.components.windows.resourceBrowserWindow.ResourcePreviewWindow")]
		]]>
	</fx:Metadata> 
	
	<fx:Script>
		<![CDATA[
			]]>
	</fx:Script>
	
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="inactive"/>
		<s:State name="disabled"/>
		<s:State name="closed" stateGroups="closedGroup"/>
		<s:State name="disabledAndClosed" stateGroups="closedGroup"/>
		<s:State name="disabledWithControlBar"/>
		<s:State name="inactiveWithControlBar"/>
		<s:State name="normalWithControlBar"/>
		<s:State name="normalAndInactive"/>
		<s:State name="disabledAndInactive"/>
	</s:states>
	
	<s:Rect width="100%" height="100%" radiusX="10" radiusY="10">
		<s:fill>
			<s:SolidColor color="#424242"/>
		</s:fill>
	</s:Rect>
	
	<s:VGroup top="9" bottom="9" left="9" right="9"
			  gap="0">
		
		<s:Group width="100%" height="85%">
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="#1d1d1d"/>
				</s:fill>
			</s:Rect>
			
			<s:HGroup width="100%" height="100%" 
					  verticalAlign="middle" horizontalAlign="center">
				<content:SpinningSmoothImage id="loadingImage" width="20" height="20" 
											 maintainAspectRatio="true"
											 scaleContent="true" 
											 smoothBitmapContent="true"
											 cachePolicy="on"
											 cacheAsBitmap="true"
											 source="@Embed('assets/spinner.png')"/>
			</s:HGroup>
			
			<s:HGroup width="100%" height="100%" 
					  verticalAlign="middle" horizontalAlign="center">
				<mx:Image id="resourceImage" width="100%" height="100%" 
						  smoothBitmapContent="true"/>	
			</s:HGroup>
			
			<mx:Canvas width="100%" height="100%" click="hostComponent.closePreviewWindow()"
					   backgroundColor="#000000" backgroundAlpha="0.01"/>
		</s:Group>
		
		<s:Group width="100%" height="15%">
			<s:Rect width="100%" height="100%">
				<s:fill>
					<s:SolidColor color="#070707"/>
				</s:fill>
			</s:Rect>
			
			<s:HGroup width="100%" height="100%"
					  bottom="10" left="25" right="25" top="20"
					  verticalAlign="middle" horizontalAlign="left">
				<s:VGroup  width="100%" height="100%">
					<s:Label id="resourceName" width="100%" height="100%" 
							 text="" 
							 textAlign="left" 
							 color="#fefefe" 
							 fontWeight="bold" fontFamily="Arial" fontSize="16" 
							 toolTip="{this.resourceName.text}"
							 maxDisplayedLines="1"/>
					
					<s:HGroup width="100%" height="100%"
							  gap="3">
						<s:TextInput id="resourceId" height="100%" width="250" color="#fefefe"
								 fontFamily="Arial" fontSize="13" fontWeight="normal" contentBackgroundAlpha="0" borderVisible="false"
								 text="" textAlign="left" editable="false"
								 toolTip="{this.resourceId.text}"
								 paddingTop="2"/>
						
						<s:Button id="copyIdButton"
								  enabled="true"
								  width="14" height="16"
								  toolTip="Copy"
								  skinClass="net.vdombox.ide.modules.wysiwyg.view.skins.CopyResourceIdBtnSkin"
								  click="hostComponent.copyResourceID()"
								  buttonMode="true"
								  tabEnabled="false"
								  focusEnabled="false"
								  useHandCursor="true"/>
						
					</s:HGroup>
				</s:VGroup>
				
				<mx:Spacer width="4" />
				
				<s:VGroup  width="100%" height="100%">
					<s:Label id="resourceType" width="100%" height="100%" 
							 text="" 
							 textAlign="right" 
							 color="#fefefe" 
							 fontWeight="bold" fontFamily="Arial" fontSize="16"
							 maxDisplayedLines="1"/>
					
					<s:Label id="resourceDimentions" width="100%" height="100%" color="#fefefe"
							 fontFamily="Arial" fontSize="13" fontWeight="bold"
							 text="" textAlign="right"
							 maxDisplayedLines="1"
							 paddingTop="2"/>
				</s:VGroup>
			</s:HGroup>
		</s:Group>
	</s:VGroup>
	
	
</s:SparkSkin>
