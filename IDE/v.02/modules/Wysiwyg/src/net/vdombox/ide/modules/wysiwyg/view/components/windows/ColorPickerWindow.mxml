			private function on_initialize() : void
			{
				var i : uint = 0; //uint(App.get_so_prop("color_picker_window_mode", ""));	

				mode = ( i >> 8 ) & 1;

				var sel : uint = i & 0xFF;
				if ( sel > 2 )
