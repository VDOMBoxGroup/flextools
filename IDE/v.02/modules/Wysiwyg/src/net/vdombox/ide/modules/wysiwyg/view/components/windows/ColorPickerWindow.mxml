			{
				if ( !event.buttonDown )
				{
					stage.removeEventListener( MouseEvent.MOUSE_MOVE, on_ccc_mouse_mov, true );
					stage.removeEventListener( MouseEvent.MOUSE_UP, on_ccc_mouse_up, true );
					return;
				}
				on_ccc_md();
			}



