<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:mx="library://ns.adobe.com/flex/halo"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:components="net.vdombox.ide.modules.wysiwyg.view.components.*"
		  
		  height="100%" width="100%"
		  paddingBottom="7" paddingLeft="7" paddingRight="7" paddingTop="7">

	<fx:Script>
		<![CDATA[
			import net.vdombox.ide.modules.wysiwyg.view.skins.PanelSkin;
		]]>
	</fx:Script>

	<mx:Accordion id="typesAccordion"
				  height="100%" width="90"
				  headerStyleName="headerStyle" />

	<s:VGroup height="100%" width="100%" gap="0">

		<components:WorkArea id="workArea"
							 height="100%" width="100%" />
	</s:VGroup>

	<s:VGroup height="100%" width="220">

		<components:ObjectAttributesPanel id="objectAttributesPanel"
										  title="{ resourceManager.getString( 'Wysiwyg_General', 'object_attributes_panel_title') }"
										  width="100%"
										  backgroundAlpha="0" cornerRadius="5"
										  borderAlpha="0" borderVisible="false"
										  skinClass="net.vdombox.ide.modules.wysiwyg.view.skins.PanelSkin" />

		<components:ObjectsTreePanel id="objectsTreePanel"
									 title="{ resourceManager.getString( 'Wysiwyg_General', 'pages_panel_title') }"
									 width="100%"
									 backgroundAlpha="0" cornerRadius="5"
									 borderAlpha="0" borderVisible="false"
									 skinClass="net.vdombox.ide.modules.wysiwyg.view.skins.PanelSkin" />
	</s:VGroup>
</s:HGroup>
