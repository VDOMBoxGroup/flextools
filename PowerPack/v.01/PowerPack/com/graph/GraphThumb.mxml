<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" horizontalAlign="center" verticalAlign="middle" borderStyle="none" height="70" backgroundAlpha="0.0">
	
    <mx:Script>
        <![CDATA[           
            // Define a property for returning the new value to the item.
            [Bindable]
            public var returnText:String;
        ]]>
    </mx:Script>
    
	<mx:Image id="imgThumb" scaleContent="true" autoLoad="true" source="resources/Tree.png" width="32" height="32"/>
	
	<mx:Canvas width="100%">
		<mx:TextInput id="txtThumb" text="{data.name}" textAlign="center" width="95%" visible="false" horizontalCenter="0" 
			change="returnText=txtThumb.text;"
			updateComplete="returnText=txtThumb.text;" />
		<mx:Label id="lblThumb" text="{txtThumb.text}" textAlign="center" fontWeight="bold" width="95%" horizontalCenter="0"/>
	</mx:Canvas>
	
</mx:VBox>
