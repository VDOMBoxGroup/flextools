				<menuitem label="Run" id="run" keyEquivalent="r" ctrlKey="true" />
				<menuitem label="Debug" id="debug" keyEquivalent="d" ctrlKey="true" />
				<menuitem label="Step By Step" id="step_by_step" keyEquivalent="d" ctrlKey="true" altKey="true" />
