<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical"
	verticalScrollPolicy="off" horizontalScrollPolicy="off"
	borderAlpha="0.95" cornerRadius="1" width="400" height="300"
	shadowDirection="right"	borderColor="#636363" titleStyleName="title"
	title="DropDown values editor" verticalGap="15" creationComplete="{}">
	
	<mx:Style>
		.title {
			color:#FFFFFF;
			fontWeight:bold;
		}
	</mx:Style>
	
	<mx:Script>
		<![CDATA[
			private var _langsProvider:Array = [];
			
			public function set langsProvider(lp:Array):void {
				_langsProvider = lp;
				
			}
			
		]]>
	</mx:Script>
	
	
	<mx:HBox width="100%" horizontalGap="4">
		<mx:VBox width="158" verticalGap="0" horizontalScrollPolicy="off" verticalScrollPolicy="off">
			<mx:Label text="First language" />
			<mx:ComboBox id="__firstLang" cornerRadius="1" width="158" />
		</mx:VBox>
		<mx:VBox width="158" verticalGap="0" horizontalScrollPolicy="off" verticalScrollPolicy="off">
			<mx:Label text="Second language" />
			<mx:ComboBox id="__sec" cornerRadius="1" width="158" />
		</mx:VBox>
	</mx:HBox>	
	
	
	<mx:DataGrid width="100%" height="100%" draggableColumns="false" sortableColumns="false">
		<mx:columns>
			<mx:DataGridColumn dataField="Text" width="160" />
			<mx:DataGridColumn dataField="Text" width="160" />
			<mx:DataGridColumn dataField="Value" />	
		</mx:columns>
	</mx:DataGrid>
	
</mx:TitleWindow>