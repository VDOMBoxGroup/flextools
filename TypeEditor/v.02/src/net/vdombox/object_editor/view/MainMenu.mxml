<?xml version="1.0"?>
<mx:MenuBar xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx"
            dataProvider="{menuData}"
            labelField="@label" x="10" y="10"
            showRoot="false">

    <fx:Declarations>
        <fx:XML format="e4x" id="menuData">
            <root>
                <menuitem label="Type" data="type_menu">
                    <menuitem label="Open folder" data="open_folder"/>
                    <menuitem label="New" data="new_type"/>
                    <menuitem label="Remove" data="remove_type"/>
                </menuitem>
                <menuitem label="Settings" data="settings_menu">
                    <menuitem label="Documentation settings" data="doc_settings"/>
                </menuitem>
            </root>
        </fx:XML>
    </fx:Declarations>

</mx:MenuBar>
